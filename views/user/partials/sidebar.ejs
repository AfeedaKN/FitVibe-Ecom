<div class="sidebar" id="sidebar">
  <div class="sidebar-header">
    <button class="toggle-btn" id="toggleBtn"><i class="fas fa-bars"></i></button>
    <div class="user-info">
      <% if (user) { %>
        <div class="user-avatar">
          <%= user.name ? user.name.charAt(0).toUpperCase() : 'U' %>
        </div>
        <h3><%= user.name || 'User' %></h3>
        <span class="user-role">Premium Customer</span>
      <% } else { %>
        <div class="user-avatar">G</div>
        <h3>Guest User</h3>
        <span class="user-role">Visitor</span>
      <% } %>
    </div>
  </div>
  <nav class="sidebar-nav">
    <a href="/" data-route="/"><i class="fas fa-home"></i> Home</a>
    <a href="/user/account" data-route="/profile"><i class="fas fa-user"></i> Account</a>
    <a href="/profile/orders" data-route="/profile/orders"><i class="fas fa-box"></i> Orders</a>
    <a href="/profile/addresses" data-route="/profile/addresses"><i class="fas fa-map-marker-alt"></i> Addresses</a>
    <a href="/profile/Wallet" data-route="/profile/Wallet"><i class="fas fa-wallet"></i> Wallet</a>
    <a href="/profile/referrals" data-route="/profile/referrals"><i class="fas fa-users"></i> Referrals</a>
    <a href="/profile/coupons" data-route="/profile/coupons"><i class="fas fa-ticket-alt"></i> Coupons</a>
    <a href="/profile/change-password" data-route="/profile/change-password"><i class="fas fa-lock"></i> Change
      Password</a>
    <a href="/logout" data-route="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
  </nav>
</div>

<style>
  /* Modern Professional Sidebar - Matching Profile Theme */
  .sidebar {
    width: 280px;
    background: #ffffff;
    border-right: 1px solid #e2e8f0;
    height: 100vh;
    padding: 1.5rem 0;
    position: fixed;
    top: 0;
    left: 0;
    overflow-y: auto;
    transition: transform 0.3s ease;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    z-index: 1000;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  }

  .sidebar-header {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 2rem;
    padding: 0 1.5rem 1.5rem;
    border-bottom: 1px solid #e2e8f0;
  }

  .user-info {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    text-align: center;
  }

  .user-avatar {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #ffffff;
    font-size: 1.5rem;
    font-weight: 700;
    border: 3px solid #ffffff;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  .sidebar-header h3 {
    font-size: 1rem;
    color: #0f172a;
    margin: 0;
    font-weight: 600;
  }

  .user-role {
    font-size: 0.75rem;
    color: #6366f1;
    background: #eef2ff;
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    font-weight: 500;
  }

  .toggle-btn {
    background: none;
    border: none;
    color: #64748b;
    font-size: 1.125rem;
    cursor: pointer;
    display: none;
    padding: 0.5rem;
    border-radius: 8px;
    transition: all 0.3s ease;
    position: absolute;
    top: 1rem;
    right: 1rem;
  }

  .toggle-btn:hover {
    background: #f1f5f9;
    color: #0f172a;
  }

  .sidebar-nav {
    padding: 0 1rem;
  }

  .sidebar-nav a {
    display: flex;
    align-items: center;
    padding: 0.875rem 1rem;
    color: #64748b;
    text-decoration: none;
    margin: 0.25rem 0;
    border-radius: 12px;
    transition: all 0.3s ease;
    font-size: 0.875rem;
    font-weight: 500;
    position: relative;
  }

  .sidebar-nav a:hover {
    background: #f8fafc;
    color: #0f172a;
    transform: translateX(4px);
  }

  .sidebar-nav a.active {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: #ffffff;
    box-shadow: 0 4px 6px -1px rgba(102, 126, 234, 0.3);
  }

  .sidebar-nav a.active:hover {
    transform: translateX(4px);
    color: #ffffff;
  }

  .sidebar-nav a i {
    margin-right: 0.75rem;
    font-size: 1rem;
    min-width: 20px;
    text-align: center;
  }

  /* Logout Section */
  .sidebar-nav a[href="/logout"] {
    margin-top: 1rem;
    border-top: 1px solid #e2e8f0;
    padding-top: 1rem;
    color: #ef4444;
  }

  .sidebar-nav a[href="/logout"]:hover {
    background: #fef2f2;
    color: #dc2626;
  }

  @media (max-width: 768px) {
    .sidebar {
      width: 280px;
      transform: translateX(-100%);
    }

    .sidebar.active {
      transform: translateX(0);
    }

    .toggle-btn {
      display: block;
    }

    body.sidebar-open {
      overflow: hidden;
    }

    body.sidebar-open::after {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5);
      z-index: 999;
    }
  }

  /* Professional Scrollbar */
  .sidebar::-webkit-scrollbar {
    width: 6px;
  }

  .sidebar::-webkit-scrollbar-track {
    background: #f1f5f9;
  }

  .sidebar::-webkit-scrollbar-thumb {
    background: #cbd5e1;
    border-radius: 3px;
  }

  .sidebar::-webkit-scrollbar-thumb:hover {
    background: #94a3b8;
  }
</style>


<script>
  // Sidebar toggle for mobile
  const sidebar = document.getElementById('sidebar');
  const toggleBtn = document.getElementById('toggleBtn');
  toggleBtn.addEventListener('click', () => {
    sidebar.classList.toggle('active');
    document.body.classList.toggle('sidebar-open');
  });

  // Close sidebar when clicking outside on mobile
  document.addEventListener('click', (e) => {
    if (window.innerWidth <= 768) {
      if (!sidebar.contains(e.target) && !toggleBtn.contains(e.target) && sidebar.classList.contains('active')) {
        sidebar.classList.remove('active');
        document.body.classList.remove('sidebar-open');
      }
    }
  });

  // Highlight active link
  const currentPath = window.location.pathname;
  document.querySelectorAll('.sidebar-nav a').forEach(link => {
    if (link.getAttribute('data-route') === currentPath) {
      link.classList.add('active');
    }
  });
</script>