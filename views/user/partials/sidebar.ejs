<!-- sidebar.ejs -->
<div class="sidebar" id="sidebar">
  <div class="sidebar-header-profile">
    <div class="user-info">
      <% if (user) { %>
        <div class="user-avatar">
          <%= user.name ? user.name.charAt(0).toUpperCase() : 'U' %>
        </div>
        <h3><%= user.name || 'User' %></h3>
        <span class="user-role">Premium Customer</span>
      <% } else { %>
        <div class="user-avatar">G</div>
        <h3>Guest User</h3>
        <span class="user-role">Visitor</span>
      <% } %>
    </div>
  </div>
  <nav class="sidebar-nav">
    <a href="/" data-route="/"><i class="fas fa-home"></i> Home</a>
    <a href="/user/account" data-route="/user/account"><i class="fas fa-user-circle"></i> Account</a>
    <a href="/profile/orders" data-route="/profile/orders"><i class="fas fa-box"></i> Orders</a>
    <a href="/profile/addresses" data-route="/profile/addresses"><i class="fas fa-map-marker-alt"></i> Addresses</a>
    <a href="/profile/Wallet" data-route="/profile/Wallet"><i class="fas fa-wallet"></i> Wallet</a>
    <a href="/profile/referrals" data-route="/profile/referrals"><i class="fas fa-users"></i> Referrals</a>
    <a href="/profile/coupons" data-route="/profile/coupons"><i class="fas fa-ticket-alt"></i> Coupons</a>
    <a href="/profile/change-password" data-route="/profile/change-password"><i class="fas fa-lock"></i> Change Password</a>
    <a href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
  </nav>
</div>

<style>
  /* Modern Professional Sidebar - Matching Profile Theme */
  .sidebar {
    width: 280px;
    background: #ffffff;
    border-right: 1px solid #e2e8f0;
    padding: 1.5rem 0;
    position: fixed;
    top: 89px; /* Height of the sticky header */
    left: 0;
    overflow-y: auto;
    transition: all 0.3s ease;
    z-index: 900; /* Below the header */
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    height: calc(100vh - 89px); /* Full height minus header */
  }

  .sidebar-header-profile {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0 1.5rem 1.5rem;
    border-bottom: 1px solid #e2e8f0;
    position: relative;
  }

  .user-info {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    text-align: center;
  }

  .user-avatar {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #ffffff;
    font-size: 1.5rem;
    font-weight: 700;
    border: 3px solid #ffffff;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  .sidebar-header-profile h3 {
    font-size: 1rem;
    color: #0f172a;
    margin: 0;
    font-weight: 600;
  }

  .user-role {
    font-size: 0.75rem;
    color: #6366f1;
    background: #eef2ff;
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    font-weight: 500;
  }

  .sidebar-nav {
    padding: 0 1rem;
  }

  .sidebar-nav a {
    display: flex;
    align-items: center;
    padding: 0.875rem 1rem;
    color: #64748b;
    text-decoration: none;
    margin: 0.25rem 0;
    border-radius: 12px;
    transition: all 0.3s ease;
    font-size: 0.875rem;
    font-weight: 500;
    position: relative;
  }

  .sidebar-nav a:hover {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
    color: #667eea;
    transform: translateX(4px);
  }

  .sidebar-nav a.active {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
    color: #ffffff;
    box-shadow: 0 4px 6px -1px rgba(102, 126, 234, 0.3);
  }

  .sidebar-nav a.active:hover {
    transform: translateX(4px);
    color: #ffffff !important;
  }

  .sidebar-nav a i {
    margin-right: 0.75rem;
    font-size: 1rem;
    min-width: 20px;
    text-align: center;
  }

  /* Logout Section */
  .sidebar-nav a[href="/logout"] {
    color: #ef4444;
  }

  .sidebar-nav a[href="/logout"]:hover {
    background: linear-gradient(135deg, rgba(239, 68, 68, 0.1) 0%, rgba(220, 38, 38, 0.1) 100%) !important;
    color: #ef4444 !important;
  }

  @media (max-width: 1023px) {
    .sidebar { transform: translateX(-100%); }
  }

  /* Professional Scrollbar */
  .sidebar::-webkit-scrollbar {
    width: 6px;
  }

  .sidebar::-webkit-scrollbar-track {
    background: #f1f5f9;
  }

  .sidebar::-webkit-scrollbar-thumb {
    background: #cbd5e1;
    border-radius: 3px;
  }

  .sidebar::-webkit-scrollbar-thumb:hover {
    background: #94a3b8;
  }
</style>

<script>
  // Highlight active link
  document.addEventListener('DOMContentLoaded', function() {
    const currentPath = window.location.pathname;
    const sidebarLinks = document.querySelectorAll('.sidebar-nav a');
    sidebarLinks.forEach(link => {
      if (link.getAttribute('data-route') === currentPath) {
        link.classList.add('active');
      }
    });
  });
</script>