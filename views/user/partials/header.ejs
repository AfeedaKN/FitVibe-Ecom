<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <style>
    /* Professional Header - Clean & Minimal */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    .top-header {
      background: #ffffff;
      border-bottom: 1px solid #e2e8f0;
      padding: 1rem 0;
      position: sticky;
      top: 0;
      z-index: 1000;
      backdrop-filter: blur(10px);
      box-shadow: 0 2px 4px -1px rgba(0, 0, 0, 0.1);
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    }

    .header-content {
      display: flex;
      justify-content: space-between;
      align-items: center;
      max-width: 1400px;
      margin: 0 auto;
      padding: 0 2rem;
    }

    .header-left {
      display: flex;
      align-items: center;
      gap: 3rem;
    }

    .sidebar-toggle {
      display: none;
      background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
      border: 2px solid rgba(102, 126, 234, 0.2);
      padding: 0.75rem;
      border-radius: 12px;
      color: #667eea;
      cursor: pointer;
      transition: all 0.3s ease;
      font-size: 1.125rem;
    }

    .sidebar-toggle:hover {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: #ffffff;
      transform: translateY(-2px);
      box-shadow: 0 8px 15px -3px rgba(102, 126, 234, 0.4);
    }

    .brand-logo {
      font-size: 2rem;
      font-weight: 700;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      text-decoration: none;
      letter-spacing: -0.025em;
      transition: all 0.3s ease;
    }

    .brand-logo:hover {
      transform: scale(1.05);
    }

    .main-nav {
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .nav-link-modern {
      color: #64748b;
      text-decoration: none;
      font-weight: 500;
      font-size: 0.875rem;
      padding: 0.75rem 1.25rem;
      border-radius: 12px;
      transition: all 0.3s ease;
      position: relative;
      white-space: nowrap;
    }

    .nav-link-modern:hover {
      color: #667eea;
      background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
      transform: translateY(-2px);
    }

    .nav-link-modern.active {
      color: #ffffff;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
    }

    .nav-link-modern.active:hover {
      transform: translateY(-3px);
      box-shadow: 0 12px 25px rgba(102, 126, 234, 0.4);
    }

    .header-right {
      display: flex;
      align-items: center;
      gap: 1.5rem;
    }

    .header-actions {
      display: flex;
      align-items: center;
      gap: 0.75rem;
    }

    .action-btn {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 48px;
      height: 48px;
      border: none;
      background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
      color: #667eea;
      border-radius: 12px;
      transition: all 0.3s ease;
      text-decoration: none;
      position: relative;
      border: 2px solid rgba(102, 126, 234, 0.2);
    }

    .action-btn:hover {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: #ffffff;
      transform: translateY(-3px);
      box-shadow: 0 8px 15px -3px rgba(102, 126, 234, 0.4);
      border-color: transparent;
    }

    .action-btn i {
      font-size: 1.125rem;
    }

.cart-badge,
.wishlist-badge {
  position: absolute;
  top: -6px;
  right: -6px;
  background: linear-gradient(135deg, #f87171 0%, #ef4444 100%);
  color: #ffffff;
  font-size: 0.8rem;
  font-weight: 700;
  padding: 0.25rem 0.5rem;
  border-radius: 999px;
  min-width: 26px;
  height: 26px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 6px -1px rgba(239, 68, 68, 0.4);
  border: 2px solid #ffffff;
}

    .auth-section {
      margin-left: 1rem;
      padding-left: 1.5rem;
      border-left: 2px solid #e2e8f0;
    }

    .auth-buttons {
      display: flex;
      gap: 0.75rem;
      align-items: center;
    }

    .auth-btn {
      padding: 0.875rem 1.5rem;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: #ffffff;
      text-decoration: none;
      border-radius: 50px;
      font-weight: 600;
      font-size: 0.875rem;
      transition: all 0.3s ease;
      border: none;
      cursor: pointer;
      box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
      display: flex;
      align-items: center;
      gap: 0.5rem;
      white-space: nowrap;
    }

    .auth-btn:hover {
      transform: translateY(-3px);
      box-shadow: 0 12px 25px rgba(102, 126, 234, 0.4);
      color: #ffffff;
    }

    .signup-btn {
      background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
      color: #667eea;
      border: 2px solid rgba(102, 126, 234, 0.3);
      box-shadow: none;
    }

    .signup-btn:hover {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: #ffffff;
      border-color: transparent;
      transform: translateY(-3px);
      box-shadow: 0 12px 25px rgba(102, 126, 234, 0.4);
    }

    .user-profile {
      display: flex;
      align-items: center;
      gap: 1rem;
      padding: 0.75rem 1.25rem;
      border-radius: 16px;
      background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
      border: 2px solid rgba(102, 126, 234, 0.2);
      transition: all 0.3s ease;
      text-decoration: none;
      color: #0f172a;
      cursor: pointer;
      min-width: 180px;
      position: relative;
    }

    .user-profile:hover {
      background: linear-gradient(135deg, rgba(102, 126, 234, 0.15) 0%, rgba(118, 75, 162, 0.15) 100%);
      border-color: rgba(102, 126, 234, 0.4);
      transform: translateY(-2px);
      box-shadow: 0 8px 15px -3px rgba(102, 126, 234, 0.2);
      color: #0f172a;
    }

    .user-avatar {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      display: flex;
      align-items: center;
      justify-content: center;
      color: #ffffff;
      font-weight: 700;
      font-size: 1rem;
      box-shadow: 0 4px 6px -1px rgba(102, 126, 234, 0.4);
      flex-shrink: 0;
    }

    .user-info {
      display: flex;
      flex-direction: column;
      flex: 1;
    }

    .user-name {
      font-size: 0.875rem;
      font-weight: 600;
      color: #0f172a;
      line-height: 1.2;
    }

    .user-role {
      font-size: 0.75rem;
      color: #667eea;
      line-height: 1.2;
      font-weight: 500;
    }

    .dropdown-arrow {
      color: #667eea;
      font-size: 0.875rem;
      transition: transform 0.3s ease;
    }

    .user-profile.active .dropdown-arrow {
      transform: rotate(180deg);
    }

    /* Enhanced Dropdown Menu */
    .dropdown-menu-modern {
      position: absolute;
      top: 100%;
      right: 0;
      background: #ffffff;
      border: none;
      border-radius: 20px;
      box-shadow: 0 20px 40px -12px rgba(0, 0, 0, 0.25);
      padding: 1rem 0;
      margin-top: 1rem;
      min-width: 240px;
      overflow: hidden;
      opacity: 0;
      visibility: hidden;
      transform: translateY(-10px);
      transition: all 0.3s ease;
      z-index: 1000;
    }

    .dropdown-menu-modern.show {
      opacity: 1;
      visibility: visible;
      transform: translateY(0);
    }

    .dropdown-menu-modern::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 4px;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .dropdown-item-modern {
      padding: 1rem 1.5rem;
      color: #64748b;
      text-decoration: none;
      font-size: 0.875rem;
      font-weight: 500;
      transition: all 0.3s ease;
      border: none;
      background: none;
      width: 100%;
      text-align: left;
      display: flex;
      align-items: center;
      gap: 1rem;
      position: relative;
    }

    .dropdown-item-modern:hover {
      background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
      color: #667eea;
      transform: translateX(4px);
    }

    .dropdown-item-modern i {
      width: 20px;
      font-size: 1rem;
      color: #667eea;
    }

    .dropdown-divider {
      margin: 0.75rem 1.5rem;
      border: none;
      border-top: 1px solid #e2e8f0;
      opacity: 1;
    }

    .logout-item {
      color: #ef4444 !important;
    }

    .logout-item:hover {
      background: linear-gradient(135deg, rgba(239, 68, 68, 0.1) 0%, rgba(220, 38, 38, 0.1) 100%) !important;
      color: #ef4444 !important;
    }

    .logout-item i {
      color: #ef4444 !important;
    }

    /* Mobile Sidebar - Enhanced */
    .mobile-sidebar {
      position: fixed;
      top: 0;
      left: -320px;
      width: 320px;
      height: 100vh;
      background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
      border-right: 1px solid #e2e8f0;
      z-index: 1050;
      transition: left 0.3s ease;
      padding: 0;
      box-shadow: 0 20px 40px -12px rgba(0, 0, 0, 0.25);
    }

    .mobile-sidebar.open {
      left: 0;
    }

    .sidebar-header {
      padding: 2rem 1.5rem;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      display: flex;
      justify-content: space-between;
      align-items: center;
      color: #ffffff;
    }

    .sidebar-brand {
      font-size: 1.75rem;
      font-weight: 700;
      color: #ffffff;
    }

    .sidebar-close {
      background: rgba(255, 255, 255, 0.2);
      border: 2px solid rgba(255, 255, 255, 0.3);
      color: #ffffff;
      font-size: 1.25rem;
      cursor: pointer;
      padding: 0.5rem;
      border-radius: 12px;
      transition: all 0.3s ease;
      width: 40px;
      height: 40px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .sidebar-close:hover {
      background: rgba(255, 255, 255, 0.3);
      transform: scale(1.1);
    }

    .sidebar-nav {
      padding: 2rem 0;
    }

    .sidebar-link {
      display: flex;
      align-items: center;
      gap: 1rem;
      padding: 1rem 1.5rem;
      color: #64748b;
      text-decoration: none;
      font-weight: 500;
      font-size: 0.875rem;
      transition: all 0.3s ease;
      border-left: 4px solid transparent;
    }

    .sidebar-link:hover {
      background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
      color: #667eea;
      border-left-color: #667eea;
      transform: translateX(4px);
    }

    .sidebar-link i {
      width: 20px;
      font-size: 1rem;
    }

    .sidebar-overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.6);
      z-index: 1040;
      opacity: 0;
      visibility: hidden;
      transition: all 0.3s ease;
      backdrop-filter: blur(4px);
    }

    .sidebar-overlay.show {
      opacity: 1;
      visibility: visible;
    }

    /* Responsive Design */
    @media (max-width: 1024px) {
      .main-nav {
        display: none;
      }
      .header-left {
        gap: 1.5rem;
      }
      .sidebar-toggle {
        display: flex;
      }
    }

    @media (max-width: 768px) {
      .user-info {
        display: none;
      }

      .header-content {
        padding: 0 1rem;
        gap: 1rem;
      }

      .header-right {
        gap: 1rem;
      }

      .header-actions {
        gap: 0.5rem;
      }

      .auth-section {
        margin-left: 0.75rem;
        padding-left: 0.75rem;
      }

      .user-profile {
        min-width: auto;
        padding: 0.75rem;
      }

      .brand-logo {
        font-size: 1.6rem;
      }

      .auth-btn {
        padding: 0.75rem 1.25rem;
        font-size: 0.8rem;
      }
    }

    @media (max-width: 480px) {
      .brand-logo {
        display: none; /* Hide logo text to save space, icon is enough */
      }

      .header-content {
        padding: 0 0.75rem;
      }

      .auth-btn {
        padding: 0.75rem 1.25rem;
        font-size: 0.75rem; /* Keep or adjust as needed */
      }

      .action-btn {
        width: 44px;
        height: 44px;
      }

      .header-right {
        gap: 0.5rem;
      }
    }

    /* Animation Enhancements */
    @keyframes fadeInDown {
      from {
        opacity: 0;
        transform: translateY(-10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* Accessibility Improvements */
    .action-btn:focus,
    .nav-link-modern:focus,
    .auth-btn:focus {
      outline: 2px solid #667eea;
      outline-offset: 2px;
    }
  </style>
</head>

<body>
  <!-- Mobile Sidebar Overlay -->
  <div class="sidebar-overlay" id="sidebarOverlay" onclick="closeSidebar()"></div>

  <!-- Mobile Sidebar -->
  <div class="mobile-sidebar" id="mobileSidebar">
    <div class="sidebar-header">
      <div class="sidebar-brand">FitVibe</div>
      <button class="sidebar-close" onclick="closeSidebar()">
        <i class="fas fa-times"></i>
      </button>
    </div>
    <nav class="sidebar-nav">
      <a href="/" class="sidebar-link">
        <i class="fas fa-home"></i>
        Home
      </a>
      <a href="/products" class="sidebar-link">
        <i class="fas fa-tags"></i>
        Sale
      </a>
      <a href="/user/wishlist" class="sidebar-link">
        <i class="fas fa-heart"></i>
        Wishlist
        <% if (typeof wishlistCount !== 'undefined' && wishlistCount > 0) { %>
          <span class="badge bg-danger ms-auto"><%= wishlistCount %></span>
        <% } %>
      </a>
      <a href="/user/cart" class="sidebar-link">
        <i class="fas fa-shopping-cart"></i>
        Shopping Cart
        <% if (typeof cartCount !== 'undefined' && cartCount > 0) { %>
          <span class="badge bg-danger ms-auto"><%= cartCount %></span>
        <% } %>
      </a>
      
      <% if (user) { %>
        <hr class="sidebar-divider" style="margin: 1rem 1.5rem; border-top: 1px solid #e2e8f0;">
        <a href="/user/account" class="sidebar-link">
          <i class="fas fa-user-circle"></i> Account
        </a>
        <a href="/profile/orders" class="sidebar-link">
          <i class="fas fa-box"></i> My Orders
        </a>
        <a href="/profile/addresses" class="sidebar-link">
          <i class="fas fa-map-marker-alt"></i> Addresses
        </a>
        <a href="/profile/Wallet" class="sidebar-link">
          <i class="fas fa-wallet"></i> Wallet
        </a>
        <a href="/profile/referrals" class="sidebar-link">
          <i class="fas fa-users"></i> Referrals
        </a>
        <a href="/profile/coupons" class="sidebar-link">
          <i class="fas fa-ticket-alt"></i> Coupons
        </a>
        <a href="/profile/change-password" class="sidebar-link">
          <i class="fas fa-lock"></i> Change Password
        </a>
        <hr class="sidebar-divider" style="margin: 1rem 1.5rem; border-top: 1px solid #e2e8f0;">
        <a href="/logout" class="sidebar-link logout-item">
          <i class="fas fa-sign-out-alt"></i> Logout
        </a>
      <% } %>
    </nav>
  </div>

  <!-- Main Header -->
  <header class="top-header">
    <div class="header-content">
      <!-- Left Section -->
      <div class="header-left">
        <button class="sidebar-toggle" onclick="openSidebar()">
          <i class="fas fa-bars"></i>
        </button>
        
        <a href="/" class="brand-logo">FitVibe</a>
        
        <nav class="main-nav">
          <a href="/" class="nav-link-modern">Home</a>
          <a href="/products" class="nav-link-modern">Sale</a>
        </nav>
      </div>

      <!-- Right Section -->
      <div class="header-right">
        <!-- Action Buttons -->
        <div class="header-actions">
          <a href="/user/wishlist" class="action-btn" title="Wishlist">
            <i class="fas fa-heart"></i>
            <% if (typeof wishlistCount !== 'undefined' && wishlistCount > 0) { %>
          <span class="wishlist-badge" id="wishlistBadge"><%= wishlistCount %></span>
            <% } %>
          </a>
          <a href="/user/cart" class="action-btn" title="Shopping Cart">
            <i class="fas fa-shopping-cart"></i>
            <% if (typeof cartCount !== 'undefined' && cartCount > 0) { %>
          <span class="cart-badge" id="cartBadge"><%= cartCount %></span>
            <% } %>
          </a>
        </div>

        <!-- Authentication Section -->
        <div class="auth-section">
          <% if (!user) { %>
            <div class="auth-buttons">
          <a href="/login" class="auth-btn login-btn" title="Login">
                <i class="fas fa-sign-in-alt"></i>
            <span class="auth-btn-text">Login</span>
              </a>
          <a href="/signup" class="auth-btn signup-btn" title="Sign Up">
                <i class="fas fa-user-plus"></i>
            <span class="auth-btn-text">Sign Up</span>
              </a>
            </div>
          <% } else { %>
            <div class="dropdown">
              <button class="user-profile" id="userProfileToggle" type="button" aria-expanded="false" aria-controls="userDropdownMenu">
                <div class="user-avatar">
                  <%= user.fullname ? user.fullname.charAt(0).toUpperCase() : (user.username ? user.username.charAt(0).toUpperCase() : 'U') %>
                </div>
                <div class="user-info">
                  <div class="user-name"><%= user.name || user.username || 'User' %></div>
                </div>
                <i class="fas fa-chevron-down dropdown-arrow"></i>
              </button>
              
              <div class="dropdown-menu-modern" id="userDropdownMenu">
                <a class="dropdown-item-modern" href="/user/account">
                  <i class="fas fa-user-circle"></i>
                  Account
                </a>
                <a class="dropdown-item-modern" href="/profile/orders">
                  <i class="fas fa-box"></i>
                  My Orders
                </a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item-modern logout-item" href="/logout">
                  <i class="fas fa-sign-out-alt"></i>
                  Logout
                </a>
              </div>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </header>

  <!-- JavaScript -->
  <script>
    function openSidebar() {
      document.getElementById('mobileSidebar').classList.add('open');
      document.getElementById('sidebarOverlay').classList.add('show');
      document.body.style.overflow = 'hidden';
    }

    function closeSidebar() {
      document.getElementById('mobileSidebar').classList.remove('open');
      document.getElementById('sidebarOverlay').classList.remove('show');
      document.body.style.overflow = '';
    }

    // Close sidebar when clicking on a link
    document.querySelectorAll('.sidebar-link').forEach(link => {
      link.addEventListener('click', closeSidebar);
    });

    // Handle active nav link
    const currentPath = window.location.pathname;
    document.querySelectorAll('.nav-link-modern').forEach(link => {
      link.classList.remove('active');
      if (link.getAttribute('href') === currentPath || 
          (currentPath === '/' && link.getAttribute('href') === '/')) {
        link.classList.add('active');
      }
    });

    // Enhanced dropdown functionality
    document.addEventListener('DOMContentLoaded', function() {
      const dropdownToggle = document.getElementById('userProfileToggle');
      const dropdownMenu = document.getElementById('userDropdownMenu');
      
      if (dropdownToggle && dropdownMenu) {
        dropdownToggle.addEventListener('click', function(e) {
          e.preventDefault();
          e.stopPropagation();
          
          // Toggle dropdown
          const isOpen = dropdownMenu.classList.contains('show');
          if (isOpen) {
            dropdownMenu.classList.remove('show');
            dropdownToggle.setAttribute('aria-expanded', 'false');
            dropdownToggle.classList.remove('active');
          } else {
            dropdownMenu.classList.add('show');
            dropdownToggle.classList.add('active');
            dropdownToggle.setAttribute('aria-expanded', 'true');
          }
        });

        // Close dropdown when clicking outside
        document.addEventListener('click', function(e) {
          if (!dropdownToggle.contains(e.target) && !dropdownMenu.contains(e.target)) {
            dropdownMenu.classList.remove('show');
            dropdownToggle.setAttribute('aria-expanded', 'false');
            dropdownToggle.classList.remove('active');
          }
        });

        // Close dropdown when clicking on dropdown items
        dropdownMenu.querySelectorAll('.dropdown-item-modern').forEach(item => {
          item.addEventListener('click', function() {
            dropdownMenu.classList.remove('show');
            dropdownToggle.setAttribute('aria-expanded', 'false');
            dropdownToggle.classList.remove('active');
          });
        });
      }
    });

    // Function to update cart count dynamically
    function updateCartCount(newCount) {
      const cartBadge = document.getElementById('cartBadge');
      if (cartBadge) {
        cartBadge.textContent = newCount;
        if (newCount > 0) {
          cartBadge.style.display = 'flex';
        } else {
          cartBadge.style.display = 'none';
        }
      }
    }

    // Function to update wishlist count dynamically
    function updateWishlistCount(newCount) {
      const wishlistBadges = document.querySelectorAll('.wishlist-badge');
      wishlistBadges.forEach(badge => {
        badge.textContent = newCount;
        if (newCount > 0) {
          badge.style.display = 'flex';
        } else {
          badge.style.display = 'none';
        }
      });
    }
  </script><script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/cart-utils.js"></script>
</body>
</html>