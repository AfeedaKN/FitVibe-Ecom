<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>FitVibe - Order Successful</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
  <style>
    /* Professional Order Success Page - Matching Home Page Theme */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: #f8fafc;
      color: #1e293b;
      line-height: 1.6;
      min-height: 100vh;
    }

    /* Success Section */
    .success-section {
      min-height: 80vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      padding: 4rem 1.5rem;
      text-align: center;
      position: relative;
      overflow: hidden;
    }

    /* Animated Background */
    .success-section::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
      z-index: 0;
    }

    .success-content {
      position: relative;
      z-index: 1;
      max-width: 600px;
      margin: 0 auto;
    }

    /* Success Icon */
    .success-icon {
      width: 120px;
      height: 120px;
      margin: 0 auto 2rem;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      box-shadow: 0 20px 40px rgba(102, 126, 234, 0.3);
      animation: successPulse 2s ease-in-out infinite;
      position: relative;
    }

    .success-icon::before {
      content: '';
      position: absolute;
      width: 140px;
      height: 140px;
      border: 3px solid rgba(102, 126, 234, 0.3);
      border-radius: 50%;
      animation: ripple 2s ease-out infinite;
    }

    .success-icon i {
      font-size: 3rem;
      color: #ffffff;
      animation: checkmark 0.8s ease-in-out 0.5s both;
    }

    /* Typography */
    .success-section h2 {
      font-size: 2.5rem;
      font-weight: 700;
      color: #0f172a;
      margin-bottom: 1rem;
      letter-spacing: -0.025em;
      animation: fadeInUp 0.8s ease-out 0.3s both;
    }

    .success-section .order-number {
      font-size: 1.125rem;
      color: #667eea;
      font-weight: 600;
      margin-bottom: 0.5rem;
      animation: fadeInUp 0.8s ease-out 0.4s both;
    }

    .success-section p {
      font-size: 1.125rem;
      color: #64748b;
      margin-bottom: 3rem;
      line-height: 1.6;
      animation: fadeInUp 0.8s ease-out 0.5s both;
    }

    /* Order Details Card */
    .order-details-card {
      background: #ffffff;
      border: 1px solid #e2e8f0;
      border-radius: 20px;
      padding: 2rem;
      margin-bottom: 3rem;
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
      position: relative;
      overflow: hidden;
      animation: fadeInUp 0.8s ease-out 0.6s both;
    }

    .order-details-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 4px;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .order-details-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1.5rem;
      text-align: left;
    }

    .order-detail-item {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    .order-detail-label {
      font-size: 0.875rem;
      color: #64748b;
      font-weight: 500;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    .order-detail-value {
      font-size: 1rem;
      color: #0f172a;
      font-weight: 600;
    }

    /* Action Buttons */
    .success-actions {
      display: flex;
      gap: 1rem;
      justify-content: center;
      flex-wrap: wrap;
      animation: fadeInUp 0.8s ease-out 0.7s both;
    }

    .success-actions a {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 1rem 2rem;
      text-decoration: none;
      border-radius: 50px;
      font-weight: 600;
      font-size: 1rem;
      transition: all 0.3s ease;
      min-width: 180px;
      justify-content: center;
    }

    .order-details-btn {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: #ffffff;
      box-shadow: 0 10px 25px rgba(102, 126, 234, 0.3);
    }

    .order-details-btn:hover {
      transform: translateY(-3px);
      box-shadow: 0 15px 35px rgba(102, 126, 234, 0.4);
      color: #ffffff;
      text-decoration: none;
    }

    .continue-shopping-btn {
      background: #ffffff;
      color: #667eea;
      border: 2px solid #667eea;
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }

    .continue-shopping-btn:hover {
      background: #667eea;
      color: #ffffff;
      transform: translateY(-3px);
      box-shadow: 0 15px 35px rgba(102, 126, 234, 0.4);
      text-decoration: none;
    }

    /* Features Section */
    .features-section {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1.5rem;
      margin-top: 3rem;
      animation: fadeInUp 0.8s ease-out 0.8s both;
    }

    .feature-card {
      background: #ffffff;
      border: 1px solid #e2e8f0;
      border-radius: 16px;
      padding: 1.5rem;
      text-align: center;
      transition: all 0.3s ease;
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }

    .feature-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    }

    .feature-icon {
      width: 60px;
      height: 60px;
      margin: 0 auto 1rem;
      background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .feature-icon i {
      font-size: 1.5rem;
      color: #667eea;
    }

    .feature-card h4 {
      font-size: 1rem;
      font-weight: 600;
      color: #0f172a;
      margin-bottom: 0.5rem;
    }

    .feature-card p {
      font-size: 0.875rem;
      color: #64748b;
      margin: 0;
    }

    /* Animations */
    @keyframes successPulse {
      0%, 100% {
        transform: scale(1);
      }
      50% {
        transform: scale(1.05);
      }
    }

    @keyframes ripple {
      0% {
        transform: scale(0.8);
        opacity: 1;
      }
      100% {
        transform: scale(1.2);
        opacity: 0;
      }
    }

    @keyframes checkmark {
      0% {
        transform: scale(0);
        opacity: 0;
      }
      50% {
        transform: scale(1.2);
      }
      100% {
        transform: scale(1);
        opacity: 1;
      }
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .success-section {
        padding: 2rem 1rem;
      }

      .success-section h2 {
        font-size: 2rem;
      }

      .success-section p {
        font-size: 1rem;
      }

      .success-icon {
        width: 100px;
        height: 100px;
      }

      .success-icon i {
        font-size: 2.5rem;
      }

      .success-actions {
        flex-direction: column;
        align-items: center;
      }

      .success-actions a {
        width: 100%;
        max-width: 300px;
      }

      .order-details-grid {
        grid-template-columns: 1fr;
        text-align: center;
      }

      .features-section {
        grid-template-columns: 1fr;
      }
    }

    @media (max-width: 480px) {
      .success-section h2 {
        font-size: 1.75rem;
      }

      .order-details-card {
        padding: 1.5rem;
      }

      .success-actions a {
        padding: 0.875rem 1.5rem;
        font-size: 0.875rem;
      }
    }

    /* Print Styles */
    @media print {
      .success-actions,
      .features-section {
        display: none;
      }
    }
  </style>
</head>
<body>
  <%- include('./partials/header') %>

  <div class="success-section">
    <div class="success-content">
      <!-- Success Icon -->
      <div class="success-icon">
        <i class="fas fa-check"></i>
      </div>

      <!-- Success Message -->
      <h2>Order Placed Successfully!</h2>
      <% if (typeof orderId !== 'undefined') { %>
        <p class="order-number">Order #<%= orderId %></p>
      <% } %>
      <p>Thank you for your purchase! Your order has been confirmed and will be processed shortly. You'll receive an email confirmation with tracking details soon.</p>

      <!-- Order Details Card -->
      <div class="order-details-card">
        <div class="order-details-grid">
          <div class="order-detail-item">
            <span class="order-detail-label">Estimated Delivery</span>
            <span class="order-detail-value">3-5 Business Days</span>
          </div>
          <div class="order-detail-item">
            <span class="order-detail-label">Payment Method</span>
            <span class="order-detail-value">Cash on Delivery</span>
          </div>
          <div class="order-detail-item">
            <span class="order-detail-label">Order Status</span>
            <span class="order-detail-value">Processing</span>
          </div>
          <div class="order-detail-item">
            <span class="order-detail-label">Support</span>
            <span class="order-detail-value">24/7 Available</span>
          </div>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="success-actions">
        <a href="/profile/orders" class="order-details-btn">
          <i class="fas fa-receipt"></i>
          View Order Details
        </a>
        <a href="/products" class="continue-shopping-btn">
          <i class="fas fa-shopping-bag"></i>
          Continue Shopping
        </a>
      </div>

      <!-- Features Section -->
      <div class="features-section">
        <div class="feature-card">
          <div class="feature-icon">
            <i class="fas fa-shipping-fast"></i>
          </div>
          <h4>Fast Delivery</h4>
          <p>Free shipping on orders above â‚¹999</p>
        </div>
        <div class="feature-card">
          <div class="feature-icon">
            <i class="fas fa-undo-alt"></i>
          </div>
          <h4>Easy Returns</h4>
          <p>30-day hassle-free return policy</p>
        </div>
        <div class="feature-card">
          <div class="feature-icon">
            <i class="fas fa-headset"></i>
          </div>
          <h4>24/7 Support</h4>
          <p>Round-the-clock customer assistance</p>
        </div>
      </div>
    </div>
  </div>

  <%- include('./partials/footer') %>

  <script>
    // Add confetti effect on page load
    document.addEventListener('DOMContentLoaded', () => {
      // Simple confetti effect using CSS animations
      createConfetti();
    });

    function createConfetti() {
      const colors = ['#667eea', '#764ba2', '#10b981', '#f59e0b', '#ef4444'];
      const confettiContainer = document.createElement('div');
      confettiContainer.style.cssText = `
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 1000;
      `;
      document.body.appendChild(confettiContainer);

      for (let i = 0; i < 50; i++) {
        const confetti = document.createElement('div');
        confetti.style.cssText = `
          position: absolute;
          width: 10px;
          height: 10px;
          background: ${colors[Math.floor(Math.random() * colors.length)]};
          left: ${Math.random() * 100}%;
          animation: confettiFall ${Math.random() * 3 + 2}s linear forwards;
          opacity: 0.8;
          border-radius: 50%;
        `;
        confettiContainer.appendChild(confetti);
      }

      // Add confetti animation
      const style = document.createElement('style');
      style.textContent = `
        @keyframes confettiFall {
          0% {
            transform: translateY(-100vh) rotate(0deg);
            opacity: 1;
          }
          100% {
            transform: translateY(100vh) rotate(720deg);
            opacity: 0;
          }
        }
      `;
      document.head.appendChild(style);

      // Remove confetti after animation
      setTimeout(() => {
        confettiContainer.remove();
        style.remove();
      }, 5000);
    }
  </script>
</body>
</html>