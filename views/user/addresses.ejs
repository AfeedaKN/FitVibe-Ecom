<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>FitVibe - Manage Addresses</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
  <style>
    /* Professional Addresses Page - Matching Profile Theme */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: #f8fafc;
      color: #1e293b;
      line-height: 1.6;
      margin-left: 280px;
    }

    .addresses-container {
      padding: 2rem 1.5rem;
      max-width: 1200px;
      margin: 0 auto;
    }

    /* Page Header */
    .page-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 2rem;
      padding-bottom: 1rem;
      border-bottom: 2px solid #e2e8f0;
      flex-wrap: wrap;
      gap: 1rem;
    }

    .page-title {
      font-size: 2.25rem;
      font-weight: 700;
      color: #0f172a;
      margin: 0;
      letter-spacing: -0.025em;
    }

    .add-address-btn {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.75rem 1.5rem;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: #ffffff;
      text-decoration: none;
      border-radius: 12px;
      font-size: 0.875rem;
      font-weight: 500;
      transition: all 0.3s ease;
      border: none;
      cursor: pointer;
    }

    .add-address-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 15px -3px rgba(102, 126, 234, 0.4);
      color: #ffffff;
    }

    /* Alerts */
    .alert {
      border-radius: 12px;
      border: none;
      padding: 1rem 1.5rem;
      margin-bottom: 1.5rem;
      font-weight: 500;
    }

    .alert-success {
      background: #d1fae5;
      color: #065f46;
    }

    .alert-danger {
      background: #fee2e2;
      color: #991b1b;
    }

    /* Addresses Grid */
    .addresses-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
      gap: 1.5rem;
      margin-bottom: 2rem;
    }

    .address-card {
      background: #ffffff;
      border: 1px solid #e2e8f0;
      border-radius: 16px;
      padding: 1.5rem;
      box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
      transition: all 0.3s ease;
      position: relative;
    }

    .address-card:hover {
      box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
      transform: translateY(-2px);
    }

    .default-badge {
      position: absolute;
      top: 1rem;
      right: 1rem;
      background: #10b981;
      color: #ffffff;
      padding: 0.25rem 0.75rem;
      border-radius: 20px;
      font-size: 0.75rem;
      font-weight: 600;
    }

    .address-header {
      margin-bottom: 1rem;
    }

    .address-name {
      font-size: 1.125rem;
      font-weight: 600;
      color: #0f172a;
      margin: 0 0 0.5rem 0;
    }

    .address-details {
      color: #64748b;
      line-height: 1.6;
      margin-bottom: 1.5rem;
    }

    .address-details p {
      margin: 0.25rem 0;
    }

    .phone-number {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      color: #374151;
      font-weight: 500;
    }

    /* Address Actions */
    .address-actions {
      display: flex;
      gap: 0.75rem;
      flex-wrap: wrap;
      padding-top: 1rem;
      border-top: 1px solid #e2e8f0;
    }

    .action-btn {
      padding: 0.5rem 1rem;
      border: none;
      border-radius: 8px;
      font-size: 0.75rem;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.3s ease;
      display: inline-flex;
      align-items: center;
      gap: 0.375rem;
    }

    .edit-btn {
      background: #3b82f6;
      color: #ffffff;
    }

    .edit-btn:hover {
      background: #2563eb;
      transform: translateY(-1px);
    }

    .delete-btn {
      background: #ef4444;
      color: #ffffff;
    }

    .delete-btn:hover {
      background: #dc2626;
      transform: translateY(-1px);
    }

    .default-btn {
      background: #10b981;
      color: #ffffff;
    }

    .default-btn:hover {
      background: #059669;
      transform: translateY(-1px);
    }

    .default-btn:disabled {
      background: #d1d5db;
      cursor: not-allowed;
      transform: none;
    }

    /* Empty State */
    .empty-addresses {
      text-align: center;
      padding: 4rem 2rem;
      background: #ffffff;
      border: 1px solid #e2e8f0;
      border-radius: 16px;
      box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
    }

    .empty-addresses i {
      font-size: 4rem;
      margin-bottom: 1rem;
      color: #cbd5e1;
    }

    .empty-addresses p {
      font-size: 1.125rem;
      color: #64748b;
      margin-bottom: 1.5rem;
    }

    /* Modal Styling */
    .modal-content {
      border-radius: 16px;
      border: none;
      box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    }

    .modal-header {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: #ffffff;
      border-radius: 16px 16px 0 0;
      border-bottom: none;
      padding: 1.5rem;
    }

    .modal-title {
      font-weight: 600;
      font-size: 1.125rem;
    }

    .btn-close {
      filter: invert(1);
    }

    .modal-body {
      padding: 1.5rem;
    }

    .modal-footer {
      border-top: 1px solid #e2e8f0;
      padding: 1rem 1.5rem;
    }

    .form-label {
      font-size: 0.875rem;
      font-weight: 500;
      color: #374151;
      margin-bottom: 0.5rem;
    }

    .form-control {
      border-radius: 8px;
      border: 1px solid #e2e8f0;
      padding: 0.75rem;
      transition: all 0.3s ease;
      font-size: 0.875rem;
    }

    .form-control:focus {
      border-color: #6366f1;
      box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
    }

    .form-check-input {
      border-radius: 4px;
    }

    .form-check-input:checked {
      background-color: #6366f1;
      border-color: #6366f1;
    }

    .text-danger {
      font-size: 0.75rem;
      margin-top: 0.25rem;
    }

    .btn-primary {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      border: none;
      border-radius: 8px;
      padding: 0.5rem 1rem;
      font-weight: 500;
    }

    .btn-secondary {
      background: #6b7280;
      border: none;
      border-radius: 8px;
      padding: 0.5rem 1rem;
      font-weight: 500;
    }

    .btn-danger {
      background: #ef4444;
      border: none;
      border-radius: 8px;
      padding: 0.5rem 1rem;
      font-weight: 500;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      body {
        margin-left: 0;
      }

      .addresses-container {
        padding: 1rem;
      }

      .page-header {
        flex-direction: column;
        align-items: stretch;
        text-align: center;
      }

      .addresses-grid {
        grid-template-columns: 1fr;
      }

      .page-title {
        font-size: 1.875rem;
      }

      .address-card {
        padding: 1rem;
      }

      .address-actions {
        flex-direction: column;
      }
    }
  </style>
</head>
<body>
  <%- include('./partials/sidebar') %>

  <div class="addresses-container">
    <!-- Page Header -->
    <div class="page-header">
      <h1 class="page-title">Manage Addresses</h1>
      <button class="add-address-btn" data-bs-toggle="modal" data-bs-target="#addAddressModal">
        <i class="fas fa-plus"></i>
        Add New Address
      </button>
    </div>

    <!-- Alerts -->
    <% if (messages.error) { %>
      <div class="alert alert-danger">
        <i class="fas fa-exclamation-circle"></i>
        <%= messages.error %>
      </div>
    <% } %>
    <% if (messages.success) { %>
      <div class="alert alert-success">
        <i class="fas fa-check-circle"></i>
        <%= messages.success %>
      </div>
    <% } %>

    <!-- Addresses Content -->
    <% if (addresses && addresses.length > 0) { %>
      <div class="addresses-grid">
        <% addresses.forEach(address => { %>
          <div class="address-card">
            <% if (address.isDefault) { %>
              <span class="default-badge">
                <i class="fas fa-star"></i>
                Default
              </span>
            <% } %>

            <div class="address-header">
              <h3 class="address-name"><%= address.name %></h3>
            </div>

            <div class="address-details">
              <p><%= address.address %></p>
              <p><%= address.city %>, <%= address.state %> <%= address.zipCode %></p>
              <p><%= address.country %></p>
              <div class="phone-number">
                <i class="fas fa-phone"></i>
                <%= address.phone %>
              </div>
            </div>

            <div class="address-actions">
              <button class="action-btn edit-btn" data-bs-toggle="modal" data-bs-target="#editAddressModal"
                data-id="<%= address._id %>" data-name="<%= address.name %>" data-phone="<%= address.phone %>"
                data-address="<%= address.address %>" data-city="<%= address.city %>" data-state="<%= address.state %>"
                data-zipcode="<%= address.zipCode %>" data-country="<%= address.country %>"
                data-isdefault="<%= address.isDefault %>">
                <i class="fas fa-edit"></i>
                Edit
              </button>

              <button class="action-btn delete-btn" data-bs-toggle="modal" data-bs-target="#deleteAddressModal"
                data-id="<%= address._id %>">
                <i class="fas fa-trash"></i>
                Delete
              </button>

              <form action="/address/set-default" method="POST" style="display: inline;">
                <input type="hidden" name="addressId" value="<%= address._id %>">
                <button type="submit" class="action-btn default-btn" <%= address.isDefault ? 'disabled' : '' %>>
                  <i class="fas fa-star"></i>
                  <%= address.isDefault ? 'Default' : 'Set Default' %>
                </button>
              </form>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <div class="empty-addresses">
        <i class="fas fa-map-marker-alt"></i>
        <p>No addresses found</p>
        <button class="add-address-btn" data-bs-toggle="modal" data-bs-target="#addAddressModal">
          <i class="fas fa-plus"></i>
          Add Your First Address
        </button>
      </div>
    <% } %>
  </div>

  <!-- Add Address Modal -->
  <div class="modal fade" id="addAddressModal" tabindex="-1" aria-labelledby="addAddressModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="addAddressModalLabel">Add New Address</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <form action="/save-address" method="POST">
          <div class="modal-body">
            <div class="mb-3">
              <label for="addName" class="form-label">Full Name</label>
              <input type="text" class="form-control" id="addName" name="name" placeholder="Enter your full name">
              <small class="text-danger" id="nameError"></small>
            </div>
            <div class="mb-3">
              <label for="addPhone" class="form-label">Phone Number</label>
              <input type="tel" class="form-control" id="addPhone" name="phone" placeholder="Enter phone number">
              <small class="text-danger" id="phoneError"></small>
            </div>
            <div class="mb-3">
              <label for="addAddress" class="form-label">Street Address</label>
              <input type="text" class="form-control" id="addAddress" name="address" placeholder="Enter street address">
              <small class="text-danger" id="addressError"></small>
            </div>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="addCity" class="form-label">City</label>
                <input type="text" class="form-control" id="addCity" name="city" placeholder="Enter city">
                <small class="text-danger" id="cityError"></small>
              </div>
              <div class="col-md-6 mb-3">
                <label for="addState" class="form-label">State</label>
                <input type="text" class="form-control" id="addState" name="state" placeholder="Enter state">
                <small class="text-danger" id="stateError"></small>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="addZipCode" class="form-label">Zip Code</label>
                <input type="text" class="form-control" id="addZipCode" name="zipCode" placeholder="Enter zip code">
                <small class="text-danger" id="zipCodeError"></small>
              </div>
              <div class="col-md-6 mb-3">
                <label for="addCountry" class="form-label">Country</label>
                <input type="text" class="form-control" id="addCountry" name="country" placeholder="Enter country">
                <small class="text-danger" id="countryError"></small>
              </div>
            </div>
            <div class="mb-3 form-check">
              <input type="checkbox" class="form-check-input" id="addIsDefault" name="isDefault">
              <label class="form-check-label" for="addIsDefault">Set as Default Address</label>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Save Address</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Edit Address Modal -->
  <div class="modal fade" id="editAddressModal" tabindex="-1" aria-labelledby="editAddressModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="editAddressModalLabel">Edit Address</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <form action="/profile/address/edit" method="POST">
          <div class="modal-body">
            <input type="hidden" id="editId" name="addressId">
            <div class="mb-3">
              <label for="editName" class="form-label">Full Name</label>
              <input type="text" class="form-control" id="editName" name="name">
              <small class="text-danger" id="editNameError"></small>
            </div>
            <div class="mb-3">
              <label for="editPhone" class="form-label">Phone Number</label>
              <input type="tel" class="form-control" id="editPhone" name="phone">
              <small class="text-danger" id="editPhoneError"></small>
            </div>
            <div class="mb-3">
              <label for="editAddress" class="form-label">Street Address</label>
              <input type="text" class="form-control" id="editAddress" name="address">
              <small class="text-danger" id="editAddressError"></small>
            </div>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="editCity" class="form-label">City</label>
                <input type="text" class="form-control" id="editCity" name="city">
                <small class="text-danger" id="editCityError"></small>
              </div>
              <div class="col-md-6 mb-3">
                <label for="editState" class="form-label">State</label>
                <input type="text" class="form-control" id="editState" name="state">
                <small class="text-danger" id="editStateError"></small>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="editZipCode" class="form-label">Zip Code</label>
                <input type="text" class="form-control" id="editZipCode" name="zipCode">
                <small class="text-danger" id="editZipCodeError"></small>
              </div>
              <div class="col-md-6 mb-3">
                <label for="editCountry" class="form-label">Country</label>
                <input type="text" class="form-control" id="editCountry" name="country">
                <small class="text-danger" id="editCountryError"></small>
              </div>
            </div>
            <div class="mb-3 form-check">
              <input type="checkbox" class="form-check-input" id="editIsDefault" name="isDefault">
              <label class="form-check-label" for="editIsDefault">Set as Default Address</label>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Update Address</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Delete Address Modal -->
  <div class="modal fade" id="deleteAddressModal" tabindex="-1" aria-labelledby="deleteAddressModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="deleteAddressModalLabel">Confirm Delete</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p>Are you sure you want to delete this address? This action cannot be undone.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <form action="/address/delete/" method="POST" id="deleteAddressForm" style="display: inline;">
            <input type="hidden" name="addressId" id="deleteAddressId">
            <button type="submit" class="btn btn-danger">Delete Address</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    
    const ValidationHelpers = {
      validateName: function(name) {
        const trimmed = name.trim();
        if (!trimmed) {
          return "Name is required";
        }
        if (/^[\s\-]+$/.test(trimmed)) {
          return "Name cannot contain only dashes or spaces";
        }
        if (!/[a-zA-Z]/.test(trimmed)) {
          return "Name should contain valid alphabets";
        }
        return null;
      },

      validatePhone: function(phone) {
        const trimmed = phone.trim();
        if (!trimmed) {
          return "Phone number is required";
        }
        if (!/^\d{10}$/.test(trimmed)) {
          return "Phone number must be exactly 10 digits";
        }
        if (trimmed.charAt(0) === '0') {
          return "Phone number cannot start with 0";
        }
        if (/^(\d)\1{9}$/.test(trimmed)) {
          return "Phone number cannot be all same digits";
        }
        return null;
      },

      validateAddress: function(address) {
        const trimmed = address.trim();
        if (!trimmed) {
          return "Address is required";
        }
        if (/^[\d\s\-\.,#@!$%^&*()_+={}[\]|\\:";'<>?/~`]+$/.test(trimmed)) {
          return "Address should contain house name, street name or other valid characters";
        }
        if (!/[a-zA-Z]/.test(trimmed)) {
          return "Address must contain at least some alphabets";
        }
        return null;
      },

      validateLocation: function(location, fieldName) {
        const trimmed = location.trim();
        if (!trimmed) {
          return `${fieldName} is required`;
        }
        if (/^[\s\-\d]+$/.test(trimmed)) {
          return `${fieldName} cannot contain only dashes or numbers`;
        }
        if (!/[a-zA-Z]/.test(trimmed)) {
          return `${fieldName} should contain letters`;
        }
        return null;
      },

      validateZipCode: function(zipCode) {
        const trimmed = zipCode.trim();
        if (!trimmed) {
          return "Zip code is required";
        }
        if (!/^\d{5,6}$/.test(trimmed)) {
          return "Zip code must be 5 or 6 digits only";
        }
        return null;
      },

      clearErrors: function(modalId) {
        document.querySelectorAll(`${modalId} small.text-danger`).forEach(errorElement => {
          errorElement.textContent = '';
        });
      },

      showError: function(errorElementId, message) {
        const errorElement = document.getElementById(errorElementId);
        if (errorElement) {
          errorElement.textContent = message;
        }
      }
    };

    function validateAddressForm(formData, modalType) {
      const errors = {};
      let isValid = true;

      const nameError = ValidationHelpers.validateName(formData.name);
      if (nameError) {
        errors.name = nameError;
        isValid = false;
      }

      const phoneError = ValidationHelpers.validatePhone(formData.phone);
      if (phoneError) {
        errors.phone = phoneError;
        isValid = false;
      }

      const addressError = ValidationHelpers.validateAddress(formData.address);
      if (addressError) {
        errors.address = addressError;
        isValid = false;
      }

      const cityError = ValidationHelpers.validateLocation(formData.city, 'City');
      if (cityError) {
        errors.city = cityError;
        isValid = false;
      }

      const stateError = ValidationHelpers.validateLocation(formData.state, 'State');
      if (stateError) {
        errors.state = stateError;
        isValid = false;
      }

      const countryError = ValidationHelpers.validateLocation(formData.country, 'Country');
      if (countryError) {
        errors.country = countryError;
        isValid = false;
      }

      // Validate Zip Code
      const zipCodeError = ValidationHelpers.validateZipCode(formData.zipCode);
      if (zipCodeError) {
        errors.zipCode = zipCodeError;
        isValid = false;
      }

      return { isValid, errors };
    }

    // Add Address Form Validation
    document.querySelector('#addAddressModal form').addEventListener('submit', function (e) {
      e.preventDefault(); // Always prevent default first
      
      const form = e.target;
      const formData = {
        name: form.name.value,
        phone: form.phone.value,
        address: form.address.value,
        city: form.city.value,
        state: form.state.value,
        zipCode: form.zipCode.value,
        country: form.country.value
      };

      // Clear previous errors
      ValidationHelpers.clearErrors('#addAddressModal');

      // Validate form
      const validation = validateAddressForm(formData, 'add');

      if (!validation.isValid) {
        // Display errors
        if (validation.errors.name) {
          ValidationHelpers.showError('nameError', validation.errors.name);
        }
        if (validation.errors.phone) {
          ValidationHelpers.showError('phoneError', validation.errors.phone);
        }
        if (validation.errors.address) {
          ValidationHelpers.showError('addressError', validation.errors.address);
        }
        if (validation.errors.city) {
          ValidationHelpers.showError('cityError', validation.errors.city);
        }
        if (validation.errors.state) {
          ValidationHelpers.showError('stateError', validation.errors.state);
        }
        if (validation.errors.country) {
          ValidationHelpers.showError('countryError', validation.errors.country);
        }
        if (validation.errors.zipCode) {
          ValidationHelpers.showError('zipCodeError', validation.errors.zipCode);
        }
        return; // Stop form submission
      }

      // If validation passes, submit the form
      form.submit();
    });

    // Edit Address Form Validation
    document.querySelector('#editAddressModal form').addEventListener('submit', function (e) {
      e.preventDefault(); // Always prevent default first
      
      const form = e.target;
      const formData = {
        name: form.name.value,
        phone: form.phone.value,
        address: form.address.value,
        city: form.city.value,
        state: form.state.value,
        zipCode: form.zipCode.value,
        country: form.country.value
      };

      // Clear previous errors
      ValidationHelpers.clearErrors('#editAddressModal');

      // Validate form
      const validation = validateAddressForm(formData, 'edit');

      if (!validation.isValid) {
        // Display errors
        if (validation.errors.name) {
          ValidationHelpers.showError('editNameError', validation.errors.name);
        }
        if (validation.errors.phone) {
          ValidationHelpers.showError('editPhoneError', validation.errors.phone);
        }
        if (validation.errors.address) {
          ValidationHelpers.showError('editAddressError', validation.errors.address);
        }
        if (validation.errors.city) {
          ValidationHelpers.showError('editCityError', validation.errors.city);
        }
        if (validation.errors.state) {
          ValidationHelpers.showError('editStateError', validation.errors.state);
        }
        if (validation.errors.country) {
          ValidationHelpers.showError('editCountryError', validation.errors.country);
        }
        if (validation.errors.zipCode) {
          ValidationHelpers.showError('editZipCodeError', validation.errors.zipCode);
        }
        return; // Stop form submission
      }

      // If validation passes, submit the form
      form.submit();
    });

    // Real-time validation (optional - shows errors as user types)
    function setupRealTimeValidation() {
      // Add modal real-time validation
      const addInputs = {
        name: { input: '#addName', error: 'nameError', validator: ValidationHelpers.validateName },
        phone: { input: '#addPhone', error: 'phoneError', validator: ValidationHelpers.validatePhone },
        address: { input: '#addAddress', error: 'addressError', validator: ValidationHelpers.validateAddress },
        city: { input: '#addCity', error: 'cityError', validator: (val) => ValidationHelpers.validateLocation(val, 'City') },
        state: { input: '#addState', error: 'stateError', validator: (val) => ValidationHelpers.validateLocation(val, 'State') },
        country: { input: '#addCountry', error: 'countryError', validator: (val) => ValidationHelpers.validateLocation(val, 'Country') },
        zipCode: { input: '#addZipCode', error: 'zipCodeError', validator: ValidationHelpers.validateZipCode }
      };

      // Edit modal real-time validation
      const editInputs = {
        name: { input: '#editName', error: 'editNameError', validator: ValidationHelpers.validateName },
        phone: { input: '#editPhone', error: 'editPhoneError', validator: ValidationHelpers.validatePhone },
        address: { input: '#editAddress', error: 'editAddressError', validator: ValidationHelpers.validateAddress },
        city: { input: '#editCity', error: 'editCityError', validator: (val) => ValidationHelpers.validateLocation(val, 'City') },
        state: { input: '#editState', error: 'editStateError', validator: (val) => ValidationHelpers.validateLocation(val, 'State') },
        country: { input: '#editCountry', error: 'editCountryError', validator: (val) => ValidationHelpers.validateLocation(val, 'Country') },
        zipCode: { input: '#editZipCode', error: 'editZipCodeError', validator: ValidationHelpers.validateZipCode }
      };

      // Setup real-time validation for add modal
      Object.values(addInputs).forEach(({ input, error, validator }) => {
        const inputElement = document.querySelector(input);
        if (inputElement) {
          inputElement.addEventListener('blur', function() {
            const errorMsg = validator(this.value);
            ValidationHelpers.showError(error, errorMsg || '');
          });
        }
      });

      // Setup real-time validation for edit modal
      Object.values(editInputs).forEach(({ input, error, validator }) => {
        const inputElement = document.querySelector(input);
        if (inputElement) {
          inputElement.addEventListener('blur', function() {
            const errorMsg = validator(this.value);
            ValidationHelpers.showError(error, errorMsg || '');
          });
        }
      });
    }

    // Initialize real-time validation
    setupRealTimeValidation();

    // Populate edit modal
    document.querySelectorAll('.edit-btn').forEach(button => {
      button.addEventListener('click', () => {
        const modal = document.querySelector('#editAddressModal');
        
        modal.querySelector('#editId').value = button.dataset.id;
        modal.querySelector('#editName').value = button.dataset.name;
        modal.querySelector('#editPhone').value = button.dataset.phone;
        modal.querySelector('#editAddress').value = button.dataset.address;
        modal.querySelector('#editCity').value = button.dataset.city;
        modal.querySelector('#editState').value = button.dataset.state;
        modal.querySelector('#editZipCode').value = button.dataset.zipcode;
        modal.querySelector('#editCountry').value = button.dataset.country;
        modal.querySelector('#editIsDefault').checked = button.dataset.isdefault === 'true';
        
        // Clear any existing errors when opening edit modal
        ValidationHelpers.clearErrors('#editAddressModal');
      });
    });

    // Populate delete modal
    document.querySelectorAll('.delete-btn').forEach(button => {
      button.addEventListener('click', () => {
        const modal = document.querySelector('#deleteAddressModal');
        const addressId = button.dataset.id;
        modal.querySelector('#deleteAddressId').value = addressId;
        modal.querySelector('#deleteAddressForm').action = `/address/delete/${addressId}`;
      });
    });

    // Clear errors when modals are closed
    document.getElementById('addAddressModal').addEventListener('hidden.bs.modal', function () {
      ValidationHelpers.clearErrors('#addAddressModal');
      this.querySelector('form').reset();
    });

    document.getElementById('editAddressModal').addEventListener('hidden.bs.modal', function () {
      ValidationHelpers.clearErrors('#editAddressModal');
    });
  </script>
