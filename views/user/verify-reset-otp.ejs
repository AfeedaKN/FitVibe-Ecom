<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>FitVibe - Verify OTP</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    body {
      font-family: 'Arial', sans-serif;
      line-height: 1.6;
      background: #f4f4f4;
    }
    .signup-section {
      max-width: 500px;
      margin: 50px auto;
      padding: 40px;
      background: white;
      border-radius: 10px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
      text-align: center;
    }
    .signup-section h2 {
      font-size: 32px;
      margin-bottom: 30px;
      color: #1a1a1a;
    }
    .signup-form {
      display: flex;
      flex-direction: column;
      gap: 20px;
    }
    .signup-form input {
      padding: 12px;
      font-size: 16px;
      border: 1px solid #ddd;
      border-radius: 5px;
      outline: none;
      transition: border 0.3s;
    }
    .signup-form input:focus {
      border-color: #ffd700;
    }
    .signup-form button {
      padding: 12px;
      font-size: 18px;
      font-weight: bold;
      background: #ffd700;
      color: #1a1a1a;
      border: none;
      border-radius: 25px;
      cursor: pointer;
      transition: background 0.3s;
    }
    .signup-form button:hover {
      background: #e6c200;
    }
    .signup-form .login-link {
      margin-top: 15px;
      font-size: 14px;
      color: #666;
    }
    .signup-form .login-link a {
      color: #ffd700;
      text-decoration: none;
    }
    .signup-form .login-link a:hover {
      text-decoration: underline;
    }
    .error-message {
      color: red;
      font-size: 14px;
      text-align: left;
      justify-content: center;
      align-items: center;
    }
  </style>
  <script>
    async function resendOtp() {
      try {
        const response = await fetch("/resend-reset-otp", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
        });
        const data = await response.json();
        alert(data.message);
      } catch (error) {
        alert("Error resending OTP. Please try again.");
      }
    }
  </script>
</head>
<body>
  <div class="signup-section">
    <h2>Verify OTP</h2>
    <form class="signup-form" action="/verify-reset-otp" method="POST">
      <input type="text" name="otp" placeholder="Enter OTP" required />
      <div class="error-message">
        <% if (message) { %>
          <%= message %>
        <% } %>
      </div>
      <button type="submit">Verify OTP</button>
      <div class="login-link">
        Didn't receive OTP? <a href="#" onclick="resendOtp()">Resend OTP</a> | 
        Back to <a href="/login">Login</a>
      </div>
    </form>
  </div>
</body>
</html>