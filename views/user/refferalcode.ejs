<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
 
<%- include('./partials/sidebar', { page: 'referral' }) %>

<div class="main-content">
  <!-- Page Header -->
  <div class="page-header">
    <h1 class="page-title">
      <i class="fas fa-user-plus"></i>
      My Referral Code
    </h1>
 
  </div>

  <!-- Referral Code Card -->
  <div class="referral-card">
    <div class="referral-header">
      <h2 class="referral-title">Your Unique Referral Code</h2>
      <span class="referral-status status-active">
        Active
      </span>
    </div>
    <div class="referral-code-container">
      <div class="referral-code" id="referralCode"><%= referralCode %></div>
      <button class="copy-btn" onclick="copyReferralCode()">
        <i class="fas fa-copy"></i>
        Copy
      </button>
    </div>
    <div class="referral-description">
      <p>Share this code with friends to earn rewards when they sign up and make their first purchase!  %>.</p>
    </div>
    <div class="referral-actions">
      <button class="share-btn whatsapp-share" onclick="shareViaWhatsApp()">
        <i class="fab fa-whatsapp"></i>
        Share via WhatsApp
      </button>
    </div>
  </div>

  <!-- Referral Statistics -->
  <div class="stats-grid">
    <div class="stat-card">
      <div class="stat-header">
        <span class="stat-title">Total Referrals</span>
        <div class="stat-icon referrals">
          <i class="fas fa-users"></i>
        </div>
      </div>
      <div class="stat-value"><%= totalReferrals %></div>
    </div>
    <div class="stat-card">
      <div class="stat-header">
        <span class="stat-title">Successful Referrals</span>
        <div class="stat-icon successful">
          <i class="fas fa-check-circle"></i>
        </div>
      </div>
      <div class="stat-value"><%= successfulReferrals %></div>
    </div>
    <div class="stat-card">
      <div class="stat-header">
        <span class="stat-title">Earned Rewards</span>
        <div class="stat-icon rewards">
          <i class="fas fa-gift"></i>
        </div>
      </div>
      <div class="stat-value">â‚¹<%= earnedRewards.toLocaleString('en-IN') %></div>
    </div>
  </div>

  <!-- Empty State (if no code) -->
  <% if (!referralCode) { %>
    <div class="empty-state">
      <i class="fas fa-user-plus"></i>
      <h3>No Referral Code Generated</h3>
      <p>Generate a referral code to start inviting friends and earning rewards.</p>
      <button class="btn btn-primary" onclick="generateReferralCode()">
        <i class="fas fa-plus"></i>
        Generate Code
      </button>
    </div>
  <% } %>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  const Toast = Swal.mixin({
    toast: true,
    position: 'top-end',
    showConfirmButton: false,
    timer: 3000,
    timerProgressBar: true,
    didOpen: (toast) => {
      toast.addEventListener('mouseenter', Swal.stopTimer);
      toast.addEventListener('mouseleave', Swal.resumeTimer);
    }
  });

  // Copy Referral Code
  function copyReferralCode() {
    const referralCode = document.getElementById('referralCode').textContent;
    navigator.clipboard.writeText(referralCode).then(() => {
      Toast.fire({
        icon: 'success',
        title: 'Referral code copied to clipboard!'
      });
    }).catch(err => {
      Toast.fire({
        icon: 'error',
        title: 'Failed to copy referral code'
      });
    });
  }

  // Share via WhatsApp
  function shareViaWhatsApp() {
    const referralCode = document.getElementById('referralCode').textContent;
    const message = encodeURIComponent(`Hey! Use my FitVibe referral code: ${referralCode} to get exclusive discounts on your first purchase! Join now: ${window.location.origin}/signup`);
    const url = `https://wa.me/?text=${message}`;
    window.open(url, '_blank');
    Toast.fire({
      icon: 'info',
      title: 'Opening WhatsApp to share...'
    });
  }

  // Refresh Referral Code
  async function refreshReferralCode() {
    try {
      const result = await Swal.fire({
        title: 'Refresh Referral Code?',
        text: 'This will generate a new referral code. Your old code will no longer be valid.',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#667eea',
        cancelButtonColor: '#64748b',
        confirmButtonText: 'Yes, Refresh',
        cancelButtonText: 'Cancel'
      });

      if (result.isConfirmed) {
        Toast.fire({
          icon: 'info',
          title: 'Refreshing referral code...'
        });
        // Placeholder for backend call
        // await fetch('/user/referral/refresh', { method: 'POST' });
        // window.location.reload();
      }
    } catch (error) {
      Toast.fire({
        icon: 'error',
        title: 'Failed to refresh referral code'
      });
    }
  }

  // Generate Referral Code (for empty state)
  async function generateReferralCode() {
    try {
      Toast.fire({
        icon: 'info',
        title: 'Generating referral code...'
      });
      // Placeholder for backend call
      // await fetch('/user/referral/generate', { method: 'POST' });
      // window.location.reload();
    } catch (error) {
      Toast.fire({
        icon: 'error',
        title: 'Failed to generate referral code'
      });
    }
  }
</script>

<style>
  /* Main Content */
  .main-content {
    margin-left: 280px;
    padding: 2rem 1.5rem;
    min-height: 100vh;
    transition: padding 0.3s ease;
    background: #f8fafc;
  }

  /* Page Header */
  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    background: #ffffff;
    padding: 2rem;
    border-radius: 16px;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    border: 1px solid #e2e8f0;
  }

  .page-title {
    font-size: 2rem;
    font-weight: 700;
    color: #0f172a;
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .page-title i {
    color: #667eea;
  }

  .header-actions {
    display: flex;
    gap: 1rem;
  }

  .btn {
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    font-weight: 600;
    font-size: 0.875rem;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  .btn-primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: #ffffff;
    box-shadow: 0 4px 6px -1px rgba(102, 126, 234, 0.3);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 15px -3px rgba(102, 126, 234, 0.4);
    color: #ffffff;
  }

  /* Referral Card */
  .referral-card {
    background: #ffffff;
    border-radius: 16px;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    border: 1px solid #e2e8f0;
    padding: 2rem;
    text-align: center;
    max-width: 500px;
    margin: 0 auto 2rem;
    transition: transform 0.3s ease;
  }

  .referral-card:hover {
    transform: translateY(-5px);
  }

  .referral-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
    border-bottom: 1px dashed #e2e8f0;
    padding-bottom: 1rem;
  }

  .referral-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: #0f172a;
    margin: 0;
  }

  .referral-status {
    padding: 0.375rem 0.75rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    background: #d1fae5;
    color: #065f46;
  }

  .referral-code-container {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 1.5rem;
    gap: 1rem;
    background: #f8fafc;
    padding: 1.5rem;
    border-radius: 12px;
    border: 1px solid #e2e8f0;
    transition: box-shadow 0.3s ease;
  }

  .referral-code-container:hover {
    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
  }

  .referral-code {
    font-size: 2rem;
    font-weight: 800;
    letter-spacing: 0.2em;
    color: #667eea;
    text-transform: uppercase;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .copy-btn {
    padding: 0.75rem 1.5rem;
    background: #667eea;
    color: #ffffff;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-weight: 600;
  }

  .copy-btn:hover {
    background: #764ba2;
    transform: translateY(-2px);
    box-shadow: 0 4px 6px -1px rgba(118, 75, 162, 0.3);
  }

  .referral-description {
    color: #64748b;
    margin-bottom: 1.5rem;
    font-size: 1rem;
    line-height: 1.6;
  }

  .referral-actions {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .share-btn {
    padding: 0.75rem 1.5rem;
    background: #25D366;
    color: #ffffff;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 600;
  }

  .share-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 15px -3px rgba(37, 211, 102, 0.4);
  }

  /* Statistics Grid */
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .stat-card {
    background: #ffffff;
    padding: 1.5rem;
    border-radius: 16px;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    border: 1px solid #e2e8f0;
    position: relative;
    overflow: hidden;
    transition: transform 0.3s ease;
  }

  .stat-card:hover {
    transform: translateY(-5px);
  }

  .stat-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  }

  .stat-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .stat-title {
    font-size: 0.875rem;
    color: #64748b;
    font-weight: 500;
  }

  .stat-icon {
    width: 40px;
    height: 40px;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
  }

  .stat-icon.referrals {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
    color: #667eea;
  }

  .stat-icon.successful {
    background: linear-gradient(135deg, rgba(34, 197, 94, 0.1) 0%, rgba(21, 128, 61, 0.1) 100%);
    color: #22c55e;
  }

  .stat-icon.rewards {
    background: linear-gradient(135deg, rgba(245, 158, 11, 0.1) 0%, rgba(180, 83, 9, 0.1) 100%);
    color: #f59e0b;
  }

  .stat-value {
    font-size: 2rem;
    font-weight: 700;
    color: #0f172a;
  }

  /* Empty State */
  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    background: #ffffff;
    border: 1px solid #e2e8f0;
    border-radius: 16px;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
    margin-top: 2rem;
  }

  .empty-state i {
    font-size: 4rem;
    margin-bottom: 1rem;
    color: #cbd5e1;
  }

  .empty-state h3 {
    font-size: 1.5rem;
    color: #374151;
    margin-bottom: 0.5rem;
  }

  .empty-state p {
    margin-bottom: 2rem;
    color: #64748b;
  }

  .empty-state button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: #ffffff;
    border: none;
    border-radius: 12px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .empty-state button:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 15px -3px rgba(102, 126, 234, 0.4);
  }

  /* Alerts */
  .alert {
    border-radius: 12px;
    padding: 1rem 1.5rem;
    margin-bottom: 1.5rem;
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .alert-success {
    background: #d1fae5;
    color: #065f46;
  }

  .alert-danger {
    background: #fee2e2;
    color: #991b1b;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .main-content {
      padding: 1.5rem 1rem;
    }
  }

  @media (max-width: 768px) {
    .main-content {
      margin-left: 0;
      padding: 1rem;
    }

    .page-header {
      flex-direction: column;
      gap: 1rem;
      align-items: stretch;
    }

    .header-actions {
      margin-left: 0;
    }

    .stats-grid {
      grid-template-columns: 1fr;
    }

    .referral-code-container {
      flex-direction: column;
      gap: 1rem;
    }

    .copy-btn {
      width: 100%;
    }

    .referral-actions {
      flex-direction: column;
    }

    .share-btn {
      width: 100%;
    }
  }
</style>


</body>
</html>