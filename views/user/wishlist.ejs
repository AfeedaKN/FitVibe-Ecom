<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>FitVibe - Your Wishlist</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
  <style>
    /* Professional Wishlist Page - Matching Home Page Theme */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: #f8fafc;
      color: #1e293b;
      line-height: 1.6;
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }

    .wishlist-item.removing {
      transition: opacity 0.5s ease, transform 0.5s ease, max-height 0.5s ease;
      opacity: 0;
      transform: scale(0.95);
      max-height: 0 !important;
      padding-top: 0 !important;
      padding-bottom: 0 !important;
      margin-bottom: 0 !important;
      overflow: hidden;
      border-width: 0;
    }

    main {
      flex: 1 0 auto;
    }

    footer {
      flex-shrink: 0;
    }

    /* Wishlist Section */
    .wishlist-section {
      max-width: 1200px;
      margin: 0 auto 4rem;
      padding: 4rem 1.5rem;
    }

    .wishlist-section h2 {
      font-size: 2.5rem;
      font-weight: 700;
      color: #0f172a;
      text-align: center;
      margin-bottom: 3rem;
      letter-spacing: -0.025em;
      position: relative;
    }

    .wishlist-section h2::after {
      content: '';
      position: absolute;
      bottom: -0.5rem;
      left: 50%;
      transform: translateX(-50%);
      width: 60px;
      height: 4px;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      border-radius: 2px;
    }

    /* Wishlist Items */
    .wishlist-items {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    .wishlist-item {
      background: #ffffff;
      border: 1px solid #e2e8f0;
      border-radius: 20px;
      padding: 2rem;
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
      transition: all 0.3s ease;
      display: flex;
      align-items: flex-start;
      gap: 1.5rem;
      position: relative;
      overflow: hidden;
    }

    .wishlist-item::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 4px;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      transform: scaleX(0);
      transition: transform 0.3s ease;
    }

    .wishlist-item:hover {
      transform: translateY(-4px);
      box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    }

    .wishlist-item:hover::before {
      transform: scaleX(1);
    }

    .wishlist-item img {
      width: 120px;
      height: 120px;
      object-fit: cover;
      border-radius: 12px;
      flex-shrink: 0;
    }

    .wishlist-item-details {
      flex: 1;
    }

    .wishlist-item-details h3 {
      font-size: 1.25rem;
      font-weight: 600;
      color: #0f172a;
      margin-bottom: 0.5rem;
      line-height: 1.4;
    }

    .wishlist-item-details p {
      color: #64748b;
      margin-bottom: 0.5rem;
      font-size: 0.875rem;
    }

    .wishlist-item-details .price {
      font-size: 1.125rem;
      font-weight: 700;
      color: #059669;
      margin-bottom: 0.75rem;
    }

    .wishlist-item-details .stars {
      display: flex;
      gap: 0.25rem;
      margin-bottom: 0.75rem;
    }

    .wishlist-item-details .stars i {
      color: #fbbf24;
      font-size: 0.875rem;
    }

    .wishlist-item-details .stars i.far {
      color: #e5e7eb;
    }

    /* Size Selection Styles */
    .size-selection {
      margin: 1rem 0;
    }

    .size-selection h4 {
      font-size: 0.875rem;
      font-weight: 600;
      color: #374151;
      margin-bottom: 0.5rem;
    }

    .size-options {
      display: flex;
      gap: 0.5rem;
      flex-wrap: wrap;
      margin-bottom: 0.75rem;
    }

    .size-btn {
      width: 40px;
      height: 40px;
      border: 1px solid #d1d5db;
      background: #ffffff;
      border-radius: 6px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.2s ease;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 0.875rem;
      color: #374151;
    }

    .size-btn:hover:not(:disabled) {
      border-color: #667eea;
      background: #667eea;
      color: white;
    }

    .size-btn.selected {
      border-color: #667eea;
      background: #667eea;
      color: white;
    }

    .size-btn.out-of-stock {
      background: #f3f4f6;
      color: #9ca3af;
      cursor: not-allowed;
      position: relative;
    }

    .size-btn.out-of-stock::after {
      content: "";
      position: absolute;
      top: 50%;
      left: 10%;
      right: 10%;
      height: 1px;
      background: #ef4444;
      transform: translateY(-50%) rotate(-45deg);
    }

    .selected-size-info {
      font-size: 0.875rem;
      color: #6b7280;
      margin-top: 0.5rem;
    }

    .selected-size-info.selected {
      color: #059669;
      font-weight: 600;
    }

    .size-warning {
      color: #ef4444;
      font-size: 0.875rem;
      font-weight: 500;
      margin-top: 0.5rem;
      display: none;
    }

    .size-warning.show {
      display: block;
    }

    /* Action Buttons */
    .wishlist-item-actions {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
      align-items: flex-end;
    }

    .add-to-cart-btn {
      padding: 0.75rem 1.5rem;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: #ffffff;
      border: none;
      border-radius: 12px;
      cursor: pointer;
      font-weight: 600;
      transition: all 0.3s ease;
      font-size: 0.875rem;
      box-shadow: 0 10px 25px rgba(102, 126, 234, 0.3);
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .add-to-cart-btn:hover {
      transform: translateY(-3px);
      box-shadow: 0 15px 35px rgba(102, 126, 234, 0.4);
    }

    .add-to-cart-btn:disabled {
      background: #9ca3af;
      cursor: not-allowed;
      transform: none;
      box-shadow: none;
    }

    .remove-btn {
      padding: 0.75rem 1.5rem;
      background: #ffffff;
      color: #ef4444;
      border: 2px solid #ef4444;
      border-radius: 12px;
      cursor: pointer;
      font-weight: 600;
      transition: all 0.3s ease;
      font-size: 0.875rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .remove-btn:hover {
      background: #ef4444;
      color: #ffffff;
      transform: translateY(-2px);
      box-shadow: 0 10px 15px -3px rgba(239, 68, 68, 0.4);
    }

    /* Empty Wishlist */
    .empty-wishlist {
      text-align: center;
      padding: 4rem 2rem;
      background: #ffffff;
      border-radius: 20px;
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }

    .empty-wishlist p {
      font-size: 1.25rem;
      color: #64748b;
      margin-bottom: 2rem;
    }

    .continue-shopping-btn {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 1rem 2rem;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: #ffffff;
      text-decoration: none;
      border-radius: 50px;
      font-size: 1.125rem;
      font-weight: 600;
      transition: all 0.3s ease;
      box-shadow: 0 10px 25px rgba(102, 126, 234, 0.3);
    }

    .continue-shopping-btn:hover {
      transform: translateY(-3px);
      box-shadow: 0 15px 35px rgba(102, 126, 234, 0.4);
      color: #ffffff;
      text-decoration: none;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .wishlist-section {
        padding: 2rem 1rem;
      }

      .wishlist-section h2 {
        font-size: 2rem;
        margin-bottom: 2rem;
      }

      .wishlist-item {
        flex-direction: column;
        align-items: flex-start;
        padding: 1.5rem;
        gap: 1rem;
      }

      .wishlist-item img {
        width: 100%;
        max-width: 200px;
        height: 150px;
        align-self: center;
      }

      .wishlist-item-actions {
        flex-direction: row;
        align-items: center;
        align-self: center;
        width: 100%;
        justify-content: center;
      }

      .add-to-cart-btn,
      .remove-btn {
        flex: 1;
        justify-content: center;
      }

      .empty-wishlist {
        padding: 2rem 1rem;
      }

      .continue-shopping-btn {
        width: 100%;
        justify-content: center;
      }
    }

    @media (max-width: 480px) {
      .wishlist-section h2 {
        font-size: 1.75rem;
      }

      .wishlist-item {
        padding: 1rem;
      }

      .wishlist-item-details h3 {
        font-size: 1.125rem;
      }

      .wishlist-item-actions {
        flex-direction: column;
        width: 100%;
      }

      .add-to-cart-btn,
      .remove-btn {
        width: 100%;
      }

      .continue-shopping-btn {
        padding: 0.875rem 1.5rem;
        font-size: 1rem;
      }
    }

    /* Loading States */
    .loading {
      opacity: 0.6;
      pointer-events: none;
    }

    .spinner {
      display: inline-block;
      width: 16px;
      height: 16px;
      border: 2px solid rgba(255, 255, 255, 0.3);
      border-radius: 50%;
      border-top-color: #fff;
      animation: spin 1s ease-in-out infinite;
    }

    @keyframes spin {
      to {
        transform: rotate(360deg);
      }
    }

    /* Animations */
    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .fade-in {
      animation: fadeIn 0.5s ease-out;
    }
  </style>
</head>
<body>
  <!-- Header Partial -->
  <%- include('./partials/header') %>

  <main>
    <!-- Wishlist Section -->
    <div class="wishlist-section">
      <h2>Your Wishlist</h2>
      <% if (wishlist && wishlist.items.length > 0) { %>
        <div class="wishlist-items">
          <% wishlist.items.forEach(item => { %>
            <div class="wishlist-item fade-in">
              <img src="<%= item.product.images && item.product.images.length > 0 ? item.product.images[0].url : '/images/no-image.png' %>" alt="<%= item.product.name %>" loading="lazy" />
              <div class="wishlist-item-details">
                <h3><%= item.product.name %></h3>
                
                <p class="price" id="price-<%= item.product._id %>">₹<%= item.selectedVariant.salePrice %></p>
                <div class="stars">
                  <% for(let i = 0; i < Math.floor(item.product.ratings.average || 0); i++) { %>
                    <i class="fas fa-star"></i>
                  <% } %>
                  <% if((item.product.ratings.average || 0) % 1 !== 0) { %>
                    <i class="fas fa-star-half-alt"></i>
                  <% } %>
                  <% for(let i = 0; i < 5 - Math.ceil(item.product.ratings.average || 0); i++) { %>
                    <i class="far fa-star"></i>
                  <% } %>
                </div>
                
                <!-- Size Selection -->
                <div class="size-selection">
                  <h4>Available Sizes:</h4>
                  <div class="size-options">
                    <% item.allVariants.forEach(variant => { %>
                      <button class="size-btn <%= !variant.isAvailable ? 'out-of-stock' : '' %>" 
                              data-product-id="<%= item.product._id %>"
                              data-variant-id="<%= variant._id %>"
                              data-size="<%= variant.size %>"
                              data-price="<%= variant.salePrice %>"
                              data-stock="<%= variant.varientquatity %>"
                              <%= !variant.isAvailable ? 'disabled' : '' %> 
                              onclick="selectSize(this)">
                        <%= variant.size %>
                      </button>
                    <% }) %>
                  </div>
                  <div class="selected-size-info" id="size-info-<%= item.product._id %>">
                    Please select a size to add to cart
                  </div>
                  <div class="size-warning" id="size-warning-<%= item.product._id %>">
                    Please select a size first
                  </div>
                </div>
              </div>
              <div class="wishlist-item-actions">
                <button class="add-to-cart-btn" 
                        data-product-id="<%= item.product._id %>" 
                        data-variant-id="" 
                        id="add-cart-btn-<%= item.product._id %>"
                        >
                  <i class="fas fa-shopping-cart"></i>
                  Add to Cart
                </button>
                <button class="remove-btn" data-product-id="<%= item.product._id %>" data-variant-id="<%= item.selectedVariant._id %>">
                  <i class="fas fa-heart-broken"></i>
                  Remove
                </button>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <div class="empty-wishlist fade-in">
          <i class="fas fa-heart" style="font-size: 4rem; color: #d1d5db; margin-bottom: 1rem;"></i>
          <p>Your wishlist is empty.</p>
          <a href="/products" class="continue-shopping-btn">
            <i class="fas fa-shopping-bag"></i>
            Continue Shopping
          </a>
        </div>
      <% } %>
    </div>
  </main>

  <!-- Footer Partial -->
  <%- include('./partials/footer') %>

  <!-- JavaScript for Wishlist Interactions -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    const Toast = Swal.mixin({
      toast: true,
      position: 'top-end',
      showConfirmButton: false,
      timer: 3000,
      timerProgressBar: true,
      didOpen: (toast) => {
        toast.addEventListener('mouseenter', Swal.stopTimer);
        toast.addEventListener('mouseleave', Swal.resumeTimer);
      }
    });

    
    let selectedSizes = <%- JSON.stringify(wishlist.items.reduce((acc, item) => {
      acc[item.product._id] = { variantId: item.selectedVariant._id, size: item.selectedVariant.size, price: item.selectedVariant.salePrice, stock: item.selectedVariant.varientquatity };
      return acc;
    }, {})) %>;

    
    function selectSize(button) {
      const productId = button.getAttribute('data-product-id');
      const variantId = button.getAttribute('data-variant-id');
      const size = button.getAttribute('data-size');
      const price = button.getAttribute('data-price');
      const stock = parseInt(button.getAttribute('data-stock'));

      
      document.querySelectorAll(`[data-product-id="${productId}"].size-btn`).forEach(btn => {
        btn.classList.remove('selected');
      });

      // Add selection to clicked button
      button.classList.add('selected');

      // Update stored selected size
      selectedSizes[productId] = { variantId, size, price, stock };
      // Update price display
      const priceElement = document.getElementById(`price-${productId}`);
      if (priceElement) {
        priceElement.textContent = `₹${price}`;
      }

      // Update size info
      const sizeInfo = document.getElementById(`size-info-${productId}`);
      if (sizeInfo) {
        sizeInfo.textContent = `Selected: Size ${size} (${stock} available)`;
        sizeInfo.classList.add('selected');
      }

      // Hide warning
      const warning = document.getElementById(`size-warning-${productId}`);
      if (warning) {
        warning.classList.remove('show');
      }

      // Enable add to cart button
      const addToCartBtn = document.getElementById(`add-cart-btn-${productId}`);
      if (addToCartBtn) {
        addToCartBtn.setAttribute('data-variant-id', variantId);
      }
    }

    document.addEventListener('DOMContentLoaded', () => {
      // Pre-select the correct size and update info on load
      document.querySelectorAll('.wishlist-item').forEach(item => {
        const productId = item.querySelector('.add-to-cart-btn').dataset.productId;
        const selectedVariant = selectedSizes[productId];
        if (selectedVariant) {
          const sizeInfo = document.getElementById(`size-info-${productId}`);
          sizeInfo.textContent = `Selected: Size ${selectedVariant.size} (${selectedVariant.stock} available)`;
          sizeInfo.classList.add('selected');
        }
      });
      // Add to cart from wishlist with size validation
      document.querySelectorAll('.add-to-cart-btn').forEach(button => {
        button.addEventListener('click', async () => {
          const productId = button.getAttribute('data-product-id');
          const variantId = button.getAttribute('data-variant-id');
          
          // Check if size is selected
          if (!variantId || !selectedSizes[productId]) {
            const warning = document.getElementById(`size-warning-${productId}`);
            if (warning) {
              warning.classList.add('show');
            }
            Toast.fire({
              icon: 'warning',
              title: 'Please select a size first'
            });
            return;
          }
          
          button.disabled = true;
          button.innerHTML = '<span class="spinner"></span> Adding...';
          
          try {
            const response = await fetch('/wishlist/add-to-cart', { // This endpoint is now in the diff for wishlistController.js
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({ productId, variantId })
            });
            const result = await response.json();
            
            if (result.success) {
              Toast.fire({
                icon: 'success',
                title: 'Product added to cart successfully!'
              });
              // Dynamically remove item from view
              setTimeout(() => {
                window.location.reload();
              }, 1000);
            } else {
              Toast.fire({
                icon: 'error',
                title: result.message || 'Failed to add product to cart'
              });
              button.disabled = false;
              button.innerHTML = '<i class="fas fa-shopping-cart"></i> Add to Cart';
            }
          } catch (err) {
            console.error('Error:', err);
            Toast.fire({
              icon: 'error',
              title: 'Error adding product to cart'
            });
            button.disabled = false;
            button.innerHTML = '<i class="fas fa-shopping-cart"></i> Add to Cart';
          }
        });
      });

      // Remove from Wishlist
      document.querySelectorAll('.remove-btn').forEach(button => {
        button.addEventListener('click', async () => {
          const productId = button.getAttribute('data-product-id');
          const variantId = button.getAttribute('data-variant-id');
          
          // Show confirmation dialog
          const result = await Swal.fire({
            title: 'Remove from Wishlist?',
            text: 'Are you sure you want to remove this item from your wishlist?',
            icon: 'question',
            showCancelButton: true,
            confirmButtonColor: '#ef4444',
            cancelButtonColor: '#6b7280',
            confirmButtonText: 'Yes, remove it!',
            cancelButtonText: 'Cancel'
          });

          if (result.isConfirmed) {
            button.disabled = true;
            button.innerHTML = '<span class="spinner"></span> Removing...';
            
            try {
              const response = await fetch('/wishlist/remove', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ productId, variantId })
              });
              
              if (response.ok) {
                Toast.fire({
                  icon: 'success',
                  title: 'Product removed from wishlist successfully!'
                });
                            setTimeout(() => {
                  window.location.reload();
                }, 1000);

              } else {
                Toast.fire({
                  icon: 'error',
                  title: 'Failed to remove product from wishlist'
                });
                button.disabled = false;
                button.innerHTML = '<i class="fas fa-heart-broken"></i> Remove';
              }
            } catch (error) {
              Toast.fire({
                icon: 'error',
                title: 'Error removing product from wishlist'
              });
              button.disabled = false;
              button.innerHTML = '<i class="fas fa-heart-broken"></i> Remove';
            }
          }
        });
      });

      // Add fade-in animation on page load
      const elements = document.querySelectorAll('.fade-in');
      elements.forEach((el, index) => {
        setTimeout(() => {
          el.style.opacity = '1';
          el.style.transform = 'translateY(0)';
        }, index * 100);
      });
    });
  </script>
</body>
</html>