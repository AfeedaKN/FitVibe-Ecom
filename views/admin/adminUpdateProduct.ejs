<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Product - FitVibe Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/admin/products.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.css">
</head>
<body>
    <!-- Include Sidebar -->
    <%- include('./partials/sidebar', { page: 'products' }) %>

    <div class="main-content">
        <!-- Include Header -->
        <%- include('./partials/header', { 
            pageTitle: 'Edit Product', 
            adminName: admin.name || 'Admin',
            breadcrumbs: [
                { name: 'Dashboard', url: '/admin/dashboard' },
                { name: 'Products', url: '/admin/products' },
                { name: 'Edit Product', url: '#' }
            ]
        }) %>

        <!-- Flash Messages -->
        <% if (typeof success_msg !== 'undefined' && success_msg) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= success_msg %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>
        <% if (typeof error_msg !== 'undefined' && error_msg) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= error_msg %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <form id="editProductForm" action="/admin/editproducts" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="productId" value="<%= product._id %>">
            
            <div class="row">
                <!-- Product Information -->
                <div class="col-lg-8">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Product Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="name" class="form-label">Product Name *</label>
                                    <input type="text" class="form-control" id="name" name="name" value="<%= product.name %>" required>
                                    <div class="invalid-feedback">Please provide a product name.</div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="category" class="form-label">Category *</label>
                                    <select class="form-select" id="category" name="category" required>
                                        <option value="">Select Category</option>
                                        <% categories.forEach(category => { %>
                                            <option value="<%= category._id %>" <%= product.categoryId._id.toString() === category._id.toString() ? 'selected' : '' %>>
                                                <%= category.name %>
                                            </option>
                                        <% }) %>
                                    </select>
                                    <div class="invalid-feedback">Please select a category.</div>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <label for="description" class="form-label">Description *</label>
                                <textarea class="form-control" id="description" name="description" rows="4" required><%= product.description %></textarea>
                                <div class="invalid-feedback">Please provide a description.</div>
                            </div>

                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label for="brand" class="form-label">Brand</label>
                                    <input type="text" class="form-control" id="brand" name="brand" value="<%= product.brand || '' %>">
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label for="color" class="form-label">Color *</label>
                                    <input type="text" class="form-control" id="color" name="color" value="<%= product.color %>" required>
                                    <div class="invalid-feedback">Please provide a color.</div>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label for="fabric" class="form-label">Fabric</label>
                                    <input type="text" class="form-control" id="fabric" name="fabric" value="<%= product.fabric || '' %>">
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="sku" class="form-label">SKU</label>
                                    <input type="text" class="form-control" id="sku" name="sku" value="<%= product.sku || '' %>">
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="offer" class="form-label">Product Offer (%)</label>
                                    <input type="number" class="form-control" id="offer" name="offer" min="0" max="100" value="<%= product.offer || 0 %>">
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="tags" class="form-label">Tags (comma separated)</label>
                                <input type="text" class="form-control" id="tags" name="tags" value="<%= product.tags ? product.tags.join(', ') : '' %>" placeholder="casual, summer, cotton">
                            </div>

                            <div class="mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="isActive" name="isActive" <%= product.isActive ? 'checked' : '' %>>
                                    <label class="form-check-label" for="isActive">
                                        Product is Active
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Variants Section -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Product Variants</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <% ['S', 'M', 'L', 'XL'].forEach((size, index) => { %>
                                    <% const variant = product.variants.find(v => v.size === size) %>
                                    <div class="col-md-3 mb-3">
                                        <label class="form-label">Size <%= size %></label>
                                        <div class="variant-group">
                                            <input type="number" 
                                                   class="form-control mb-2" 
                                                   name="varientPrice[<%= size %>]" 
                                                   placeholder="Price" 
                                                   min="0" 
                                                   step="0.01"
                                                   value="<%= variant ? variant.varientPrice : '' %>">
                                            <input type="number" 
                                                   class="form-control" 
                                                   name="sizes[<%= size %>]" 
                                                   placeholder="Quantity" 
                                                   min="0"
                                                   value="<%= variant ? variant.varientquatity : '' %>">
                                        </div>
                                    </div>
                                <% }) %>
                            </div>
                            <small class="text-muted">Enter price and quantity for each size. Leave empty for unavailable sizes.</small>
                        </div>
                    </div>
                </div>

                <!-- Images Section -->
                <div class="col-lg-4">
                    <!-- Current Images -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Current Images</h5>
                        </div>
                        <div class="card-body">
                            <div class="row" id="currentImagesContainer">
                                <% if (product.images && product.images.length > 0) { %>
                                    <% product.images.forEach((image, index) => { %>
                                        <div class="col-6 mb-3" data-image-index="<%= index %>">
                                            <div class="image-item">
                                                <img src="<%= image.thumbnail || image.url %>" 
                                                     alt="Product Image" 
                                                     class="img-fluid rounded">
                                                <div class="image-overlay">
                                                    <% if (image.isMain) { %>
                                                        <span class="badge bg-primary">Main</span>
                                                    <% } %>
                                                    <button type="button" 
                                                            class="btn btn-sm btn-danger" 
                                                            onclick="removeCurrentImage(<%= index %>)">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    <% }) %>
                                <% } else { %>
                                    <p class="text-muted">No images available</p>
                                <% } %>
                            </div>
                        </div>
                    </div>

                    <!-- Upload New Images -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Upload New Images</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label for="productImages" class="form-label">Add More Images</label>
                                <input type="file" 
                                       class="form-control" 
                                       id="productImages" 
                                       name="productImages" 
                                       multiple 
                                       accept="image/*">
                                <small class="text-muted">Select multiple images to add to the product.</small>
                            </div>

                            <!-- New Image Preview Container -->
                            <div id="imagePreviewContainer" class="mt-3">
                                <!-- Previews will be added here -->
                            </div>

                            <!-- Cropped Images Container (hidden) -->
                            <div id="croppedImagesContainer" style="display: none;">
                                <!-- Cropped images will be stored here -->
                            </div>
                        </div>
                    </div>

                    <!-- Form Actions -->
                    <div class="card">
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-success" id="submitBtn">
                                    <i class="fas fa-save"></i> Update Product
                                </button>
                                <a href="/admin/products" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Back to Products
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <!-- Image Cropping Modal -->
    <div class="modal fade" id="cropModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Crop Image</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="crop-container">
                        <img id="cropImage" style="max-width: 100%;">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="cropConfirm">Crop & Save</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.js"></script>
    <script src="/js/admin/productManagement.js"></script>
    <script>
        // Initialize image cropping for edit product page
        document.addEventListener('DOMContentLoaded', function() {
            initializeImageCropping();
            initializeFormValidation();
        });

        // Function to remove current image
        function removeCurrentImage(index) {
            if (confirm('Are you sure you want to remove this image?')) {
                const imageItem = document.querySelector(`[data-image-index="${index}"]`);
                if (imageItem) {
                    imageItem.remove();
                }
            }
        }
    </script>
</body>
</html>