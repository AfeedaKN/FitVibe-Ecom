        }

        .stats-card-customers {
            flex-direction: column;
            text-align: center;
            gap: 0.75rem;
        }

        .stats-content-customers {
            text-align: center;
        }
    }
</style>

<script>
    function searchUsers() {
        const search = document.getElementById('search').value;
        window.location.href = `/admin/users?search=${encodeURIComponent(search)}`;
    }

    // Allow Enter key to trigger search
    document.getElementById('search').addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
            searchUsers();
        }
    });

    async function toggleBlock(userId) {
        try {
            const result = await Swal.fire({
                title: 'Confirm Action',
                text: 'Are you sure you want to change this customer\'s status?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#171717',
                cancelButtonColor: '#525252',
                confirmButtonText: 'Yes, proceed!',
                background: '#ffffff',
                color: '#171717'
            });

            if (!result.isConfirmed) {
                return;
            }

            const response = await fetch(`/admin/block-user/${userId}`, {
                method: 'PATCH',
                headers: { 'Content-Type': 'application/json' }
            });
            
            const responseData = await response.json();
            
            if (responseData.success) {
                Swal.fire({
                    icon: 'success',
                    title: 'Success',
                    text: responseData.message,
                    background: '#ffffff',
                    color: '#171717',
                    confirmButtonColor: '#171717'
                }).then(() => {
                    window.location.reload();
                });
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: responseData.message || 'Failed to toggle user status',
                    background: '#ffffff',
                    color: '#171717',
                    confirmButtonColor: '#525252'
                });
            }
        } catch (error) {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'Error toggling user status',
                background: '#ffffff',
                color: '#171717',
                confirmButtonColor: '#525252'
            });
        }
    }

    function viewCustomerDetails(userId) {
        // This is a placeholder function - you can implement customer details view
        Swal.fire({
            icon: 'info',
            title: 'Customer Details',
            text: 'Customer details view functionality can be implemented here.',
            background: '#ffffff',
            color: '#171717',
            confirmButtonColor: '#171717'
        });
    }

    // Initialize tooltips
    document.addEventListener('DOMContentLoaded', function() {
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    });
</script>

