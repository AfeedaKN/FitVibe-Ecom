    }

    .stats-number-customers {
        font-size: 1.75rem;
        font-weight: 700;
        color: var(--text-primary);
        line-height: 1.2;
        font-family: 'Courier New', monospace;
    }

    .stats-label-customers {
        font-size: 0.875rem;
