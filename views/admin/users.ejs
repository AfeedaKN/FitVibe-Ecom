        border-radius: 0 0 var(--radius-xl) var(--radius-xl);
    }

    .btn-close-modern {
        filter: none;
        background: none;
        border: none;
        opacity: 0.6;
    }

    .btn-close-modern:hover {
        opacity: 1;
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
        .action-buttons {
            flex-direction: column;
            gap: 0.25rem;
        }

        .action-buttons .btn {
            padding: 0.25rem 0.5rem;
