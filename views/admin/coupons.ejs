<body>
    <%- include('./partials/sidebar', { page: 'coupons' }) %>
    <button class="global-sidebar-toggle" aria-label="Toggle sidebar" title="Menu" onclick="toggleSidebar()">
        <i class="fas fa-bars"></i>
    </button>
    <div class="main-content">
        <div class="page-header">
            <h1 class="page-title">
                <i class="fas fa-ticket-alt"></i>
                Coupon Management
            </h1>
            <div class="header-actions">
                <form class="search-form" action="/admin/coupons" method="GET">
                    <input type="text" name="search" class="search-input" placeholder="Search coupons..." value="<%= query.search || '' %>">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i>
                        Search
                    </button>
                    <% if (query.search) { %>
                        <a href="/admin/coupons" class="btn btn-clear">
                            <i class="fas fa-times"></i>
                            Clear
                        </a>
                    <% } %>
                </form>
                <a href="/admin/coupons/add" class="btn btn-primary">
                    <i class="fas fa-plus"></i>
                    Add New Coupon
                </a>
            </div>
        </div>

        <!-- Statistics Cards -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-header">
                    <span class="stat-title">Total Coupons</span>
                    <div class="stat-icon total">
                        <i class="fas fa-ticket-alt"></i>
                    </div>
                </div>
                <div class="stat-value"><%= totalCoupons %></div>
            </div>
            <div class="stat-card">
                <div class="stat-header">
                    <span class="stat-title">Active Coupons</span>
                    <div class="stat-icon active">
                        <i class="fas fa-check-circle"></i>
                    </div>
                </div>
                <div class="stat-value"><%= coupons.filter(c => c.isList && c.expireOn > new Date()).length %></div>
            </div>
            <div class="stat-card">
                <div class="stat-header">
                    <span class="stat-title">Inactive Coupons</span>
                    <div class="stat-icon inactive">
                        <i class="fas fa-times-circle"></i>
                    </div>
                </div>
                <div class="stat-value"><%= coupons.filter(c => !c.isList).length %></div>
            </div>
            <div class="stat-card">
                <div class="stat-header">
                    <span class="stat-title">Expired Coupons</span>
                    <div class="stat-icon expired">
                        <i class="fas fa-clock"></i>
                    </div>
                </div>
                <div class="stat-value"><%= coupons.filter(c => c.expireOn <= new Date()).length %></div>
            </div>
        </div>

        <!-- Coupons Table -->
        <div class="coupons-table-container">
            <div class="table-header">
                <h2 class="table-title">All Coupons</h2>
            </div>
            
            <% if (coupons && coupons.length > 0) { %>
                <div class="table-wrapper">
                    <table class="coupons-table">
                        <thead>
                            <tr>
                                <th>Coupon Code</th>
                                <th>Description</th>
                                <th>Discount</th>
                                <th>Min. Purchase</th>
                                <th>Usage</th>
                                <th>Expires</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% coupons.forEach(coupon => { %>
                                <% 
                                    const isExpired = coupon.expireOn <= new Date();
                                    const isActive = coupon.isList && !isExpired;
                                %>
                                <tr>
                                    <td>
                                        <span class="coupon-code"><%= coupon.name %></span>
                                    </td>
                                    <td>
                                        <span class="coupon-description" title="<%= coupon.description %>">
                                            <%= coupon.description %>
                                        </span>
                                    </td>
                                    <td>
                                        <span class="discount-badge <%= coupon.discountType %>">
                                            <% if (coupon.discountType === 'percentage') { %>
                                                <i class="fas fa-percentage"></i>
                                                <%= coupon.discountValue %>%
                                            <% } else { %>
                                                <i class="fas fa-rupee-sign"></i>
                                                ₹<%= coupon.discountValue %>
                                            <% } %>
                                        </span>
                                    </td>
                                    <td>₹<%= coupon.minimumPrice.toLocaleString('en-IN') %></td>
                                    <td>
                                        <% if (coupon.usageLimit) { %>
                                            <%= coupon.usedCount %>/<%= coupon.usageLimit %>
                                        <% } else { %>
                                            <%= coupon.usedCount %>/∞
                                        <% } %>
                                    </td>
                                    <td><%= coupon.expireOn.toLocaleDateString('en-IN') %></td>
                                    <td>
                                        <% if (isExpired) { %>
                                            <span class="status-badge expired">
                                                <i class="fas fa-clock"></i>
                                                Expired
                                            </span>
                                        <% } else if (isActive) { %>
                                            <span class="status-badge active">
                                                <i class="fas fa-check-circle"></i>
                                                Active
                                            </span>
                                        <% } else { %>
                                            <span class="status-badge inactive">
                                                <i class="fas fa-times-circle"></i>
                                                Inactive
                                            </span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <div class="action-buttons">
                                            <a href="/admin/coupons/edit/<%= coupon._id %>" class="btn btn-sm btn-edit" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <% if (!isExpired) { %>
                                                <button class="btn btn-sm btn-toggle" onclick="toggleCouponStatus('<%= coupon._id %>', <%= coupon.isList %>)" title="<%= coupon.isList ? 'Unlist' : 'List' %>">
                                                    <i class="fas fa-<%= coupon.isList ? 'eye-slash' : 'eye' %>"></i>
                                                </button>
                                            <% } %>
                                            <button class="btn btn-sm btn-stats" onclick="viewCouponStats('<%= coupon._id %>')" title="View Stats">
                                                <i class="fas fa-chart-bar"></i>
                                            </button>
                                            <button class="btn btn-sm btn-delete" onclick="deleteCoupon('<%= coupon._id %>')" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="empty-state">
                    <i class="fas fa-ticket-alt"></i>
                    <h3>No Coupons Found</h3>
                    <p>
                        <%= query.search ? 'No coupons match your search query.' : 'You haven\'t created any coupons yet.' %>
                        <%= query.search ? '<a href="/admin/coupons" class="btn btn-primary"><i class="fas fa-times"></i> Clear Search</a>' : '<a href="/admin/coupons/add" class="btn btn-primary"><i class="fas fa-plus"></i> Create First Coupon</a>' %>
                    </p>
                </div>
            <% } %>
        </div>

        <!-- Pagination -->
        <% if (totalPages > 1) { %>
            <div class="pagination">
                <% if (currentPage > 1) { %>
                    <a href="?page=<%= currentPage - 1 %><%= query.search ? '&search=' + query.search : '' %>" class="pagination-btn">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                <% } %>
                
                <% for (let i = 1; i <= totalPages; i++) { %>
                    <a href="?page=<%= i %><%= query.search ? '&search=' + query.search : '' %>" class="pagination-btn <%= currentPage === i ? 'active' : '' %>">
                        <%= i %>
                    </a>
                <% } %>
                
                <% if (currentPage < totalPages) { %>
                    <a href="?page=<%= currentPage + 1 %><%= query.search ? '&search=' + query.search : '' %>" class="pagination-btn">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                <% } %>
            </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Initialize Toast notifications
        const Toast = Swal.mixin({
            toast: true,
            position: 'top-end',
            showConfirmButton: false,
            timer: 3000,
            timerProgressBar: true,
            didOpen: (toast) => {
                toast.addEventListener('mouseenter', Swal.stopTimer);
                toast.addEventListener('mouseleave', Swal.resumeTimer);
            }
        });

        // Show loading state
        function showLoading(button, originalText) {
            button.disabled = true;
            button.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';
            return originalText;
        }

        // Hide loading state
        function hideLoading(button, originalText) {
            button.disabled = false;
            button.innerHTML = originalText;
        }

        // Toggle coupon status (list/unlist)
        async function toggleCouponStatus(couponId, currentStatus) {
            console.log('Toggle coupon status called:', { couponId, currentStatus });
            
            if (!couponId) {
                Toast.fire({
                    icon: 'error',
                    title: 'Invalid coupon ID'
                });
                return;
            }

            const action = currentStatus ? 'unlist' : 'list';
            
            try {
                const result = await Swal.fire({
                    title: `${action.charAt(0).toUpperCase() + action.slice(1)} Coupon?`,
                    text: `Are you sure you want to ${action} this coupon?`,
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonColor: '#667eea',
                    cancelButtonColor: '#64748b',
                    confirmButtonText: `Yes, ${action} it!`,
                    cancelButtonText: 'Cancel'
                });

                if (result.isConfirmed) {
                    console.log('Making PATCH request to:', `/admin/coupons/toggle/${couponId}`);
                    
                    const response = await fetch(`/admin/coupons/toggle/${couponId}`, {
                        method: 'PATCH',
                        headers: {
                            'Content-Type': 'application/json',
                            'Accept': 'application/json'
                        }
                    });

                    console.log('Response status:', response.status);
                    
                    if (!response.ok) {
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }

                    const data = await response.json();
                    console.log('Response data:', data);

                    if (data.success) {
                        Toast.fire({
