                        });
                        
                        setTimeout(() => {
                            window.location.reload();
                        }, 1500);
                    } else {
                        Toast.fire({
                            icon: 'error',
                            title: data.message || 'Failed to update coupon status'
                        });
                    }
                }
            } catch (error) {
                console.error('Error toggling coupon status:', error);
                Toast.fire({
                    icon: 'error',
                    title: 'Network error. Please check your connection and try again.'
                });
