<%- include('./partials/header', { pageTitle: 'Customer Management' }) %>

<%- include('./partials/sidebar', { page: 'users' }) %>

<div class="main-content">
    <!-- Top Header -->
    <header class="top-header">
        <div class="header-content">
            <div class="header-left">
                <button class="sidebar-toggle" onclick="toggleSidebar()">
                    <i class="fas fa-bars"></i>
                </button>
                <div>
                    <h1 class="page-title">Customer Management</h1>
                    <div class="breadcrumbs">
                        <a href="/admin/dashboard">Dashboard</a>
                        <span class="breadcrumb-separator">/</span>
                        <span>Customers</span>
                    </div>
                </div>
            </div>
            <div class="header-right">
                <div class="admin-profile">
                    <div class="admin-avatar">
                        A
                    </div>
                    <div class="admin-info">
                        <div class="admin-name">Admin</div>
                        <div class="admin-role">Administrator</div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Content Area -->
    <div class="content-area">
        <!-- Stats Overview -->
        <div class="stats-overview">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-users"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-number"><%= data ? data.length : 0 %></div>
                    <div class="stat-label">Total Customers</div>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-user-check"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-number">
                        <% if (data && data.length > 0) { %>
                            <%= data.filter(u => !u.isBlocked).length %>
                        <% } else { %>
                            0
                        <% } %>
                    </div>
                    <div class="stat-label">Active</div>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-user-lock"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-number">
                        <% if (data && data.length > 0) { %>
                            <%= data.filter(u => u.isBlocked).length %>
                        <% } else { %>
                            0
                        <% } %>
                    </div>
                    <div class="stat-label">Blocked</div>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-calendar-day"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-number">
                        <% if (data && data.length > 0) { %>
                            <%= data.filter(u => {
                                const today = new Date();
                                const userDate = new Date(u.createdAt || u.dateJoined);
                                return userDate.toDateString() === today.toDateString();
                            }).length %>
                        <% } else { %>
                            0
                        <% } %>
                    </div>
                    <div class="stat-label">New Today</div>
                </div>
            </div>
        </div>

        <!-- Filters and Search -->
        <div class="filter-card">
            <div class="filter-header">
                <h3 class="filter-title">
                    <i class="fas fa-filter"></i>
                    Search & Filter Customers
                </h3>
            </div>
            <div class="filter-body">
                <form action="/admin/users" method="get" class="filter-form">
                    <div class="filter-row">
                        <div class="filter-group">
                            <label class="filter-label">Search Customers</label>
                            <div class="search-input-wrapper">
                                <input type="text" 
                                       name="search" 
                                       class="search-input" 
                                       placeholder="Search by name, email, or phone..." 
                                       value="<%= search || '' %>">
                                <i class="fas fa-search search-icon"></i>
                            </div>
                        </div>
                        <div class="filter-group">
                            <label class="filter-label">Status</label>
                            <select name="status" class="filter-select">
                                <option value="">All Customers</option>
                                <option value="active">Active Only</option>
                                <option value="blocked">Blocked Only</option>
                            </select>
                        </div>
                        <div class="filter-group">
                            <label class="filter-label">Sort By</label>
                            <select name="sort" class="filter-select">
                                <option value="-createdAt">Newest First</option>
                                <option value="createdAt">Oldest First</option>
                                <option value="name">Name A-Z</option>
                                <option value="-name">Name Z-A</option>
                            </select>
                        </div>
                    </div>
                    <div class="filter-actions">
                        <button type="submit" class="btn-primary">
                            <i class="fas fa-search"></i>
                            Apply Filters
                        </button>
                        <a href="/admin/users" class="btn-secondary">
                            <i class="fas fa-times"></i>
                            Clear All
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <!-- Customers Table -->
        <% if (data && data.length > 0) { %>
            <div class="customers-table-card">
                <div class="table-header">
                    <h3 class="table-title">
                        <i class="fas fa-users"></i>
                        Customers List
                    </h3>
                </div>
                <div class="table-container">
                    <table class="customers-table">
                        <thead>
                            <tr>
                                <th>
                                    <div class="th-content">
                                        <span>Customer Details</span>
                                        <i class="fas fa-sort"></i>
                                    </div>
                                </th>
                                <th>Contact Information</th>
                                <th>Join Date</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% data.forEach((customer, index) => { %>
                                <tr class="customer-row">
                                    <td>
                                        <div class="customer-info">
                                            <div class="customer-avatar">
                                                <%= customer.name.charAt(0).toUpperCase() %>
                                            </div>
                                            <div class="customer-details">
                                                <div class="customer-name"><%= customer.name %></div>
                                                <div class="customer-id">ID: #<%= customer._id.toString().slice(-8).toUpperCase() %></div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="contact-info">
                                            <div class="customer-email">
                                                <i class="fas fa-envelope"></i>
                                                <%= customer.email %>
                                            </div>
                                            <div class="customer-phone">
                                                <i class="fas fa-phone"></i>
                                                <%= customer.phone || 'N/A' %>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="join-date">
                                            <%= (customer.createdAt || customer.dateJoined || new Date()).toLocaleDateString('en-IN', { 
                                                year: 'numeric', 
                                                month: 'short', 
                                                day: 'numeric' 
                                            }) %>
                                        </div>
                                        <div class="join-time">
                                            <%= (customer.createdAt || customer.dateJoined || new Date()).toLocaleTimeString('en-IN', { 
                                                hour: '2-digit', 
                                                minute: '2-digit' 
                                            }) %>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="status-badge status-<%= customer.isBlocked ? 'blocked' : 'active' %>">
                                            <i class="fas fa-circle"></i>
                                            <%= customer.isBlocked ? 'Blocked' : 'Active' %>
                                        </span>
                                    </td>
                                    <td>
                                        <div class="action-buttons">
                                            <% if (!customer.isBlocked) { %>
                                                <button class="action-btn block-btn"
                                                        onclick="toggleBlock('<%= customer._id %>', 'block')"
                                                        title="Block Customer">
                                                    <i class="fas fa-lock"></i>
                                                </button>
                                            <% } else { %>
                                                <button class="action-btn unblock-btn"
                                                        onclick="toggleBlock('<%= customer._id %>', 'unblock')"
                                                        title="Unblock Customer">
                                                    <i class="fas fa-unlock"></i>
                                                </button>
                                            <% } %>
                                            
                                            <button class="action-btn view-btn"
                                                    onclick="viewCustomerDetails('<%= customer._id %>')"
                                                    title="View Customer Details">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Pagination -->
            <% if (totalPages > 1) { %>
                <div class="pagination-container">
                    <nav class="pagination-nav">
                        <ul class="pagination">
                            <% for(let i = 1; i <= totalPages; i++) { %>
                                <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                    <a class="page-link" 
                                       href="/admin/users?page=<%= i %><%= search ? '&search=' + encodeURIComponent(search) : '' %>">
                                        <%= i %>
                                    </a>
                                </li>
                            <% } %>
                        </ul>
                    </nav>
                </div>
            <% } %>
        <% } else { %>
            <!-- Empty State -->
            <div class="empty-state-card">
                <div class="empty-state-content">
                    <div class="empty-state-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <h3 class="empty-state-title">No Customers Found</h3>
                    <p class="empty-state-text">
                        <% if (search) { %>
                            No customers match your current search criteria. Try adjusting your filters.
                        <% } else { %>
                            Customers will appear here once they start registering.
                        <% } %>
                    </p>
                    <% if (search) { %>
                        <a href="/admin/users" class="btn-secondary">
                            <i class="fas fa-times"></i>
                            Clear Filters
                        </a>
                    <% } %>
                </div>
            </div>
        <% } %>
    </div>
</div>

<!-- Customer Details Modal -->
<div class="modal fade" id="customerDetailsModal" tabindex="-1" aria-labelledby="customerDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content modal-modern">
            <div class="modal-header modal-header-modern">
                <h5 class="modal-title fw-semibold" id="customerDetailsModalLabel">
                    <i class="fas fa-user me-2"></i>Customer Details
                </h5>
                <button type="button" class="btn-close btn-close-modern" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body modal-body-modern">
                <div id="customerDetailsContent">
                    <!-- Customer details will be loaded here -->
                    <div class="text-center py-4">
                        <i class="fas fa-user-circle text-muted-modern mb-3" style="font-size: 4rem;"></i>
                        <h6 class="text-muted-modern">Customer details view can be implemented here</h6>
                        <p class="text-muted-modern mb-0">This modal can show detailed customer information, order history, etc.</p>
                    </div>
                </div>
            </div>
            <div class="modal-footer modal-footer-modern">
                <button type="button" class="btn btn-outline-modern" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Close
                </button>
            </div>
        </div>
    </div>
</div>

