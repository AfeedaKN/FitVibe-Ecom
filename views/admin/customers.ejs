<%- include('./partials/header', { pageTitle: 'Customer Management' }) %>

<%- include('./partials/sidebar', { page: 'users' }) %>

<div class="main-content">
    <!-- Top Header -->
    <header class="top-header">
        <div class="header-content">
            <div class="header-left">
                <button class="sidebar-toggle" onclick="toggleSidebar()">
                    <i class="fas fa-bars"></i>
                </button>
                <div>
                    <h1 class="page-title">Customer Management</h1>
                    <div class="breadcrumbs">
                        <a href="/admin/dashboard">Dashboard</a>
                        <span class="breadcrumb-separator">/</span>
                        <span>Customers</span>
                    </div>
                </div>
            </div>
            <div class="header-right">
                <div class="admin-profile">
                    <div class="admin-avatar">
                        A
                    </div>
                    <div class="admin-info">
                        <div class="admin-name">Admin</div>
                        <div class="admin-role">Administrator</div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Content Area -->
    <div class="content-area">
        <!-- Search and Stats -->
        <div class="row g-4 mb-4">
            <!-- Search Bar -->
            <div class="col-lg-8">
                <div class="card-modern no-hover">
                    <div class="card-body-modern">
                        <form action="/admin/users" method="get" class="d-flex gap-3">
                            <div class="position-relative flex-grow-1">
                                <input type="text" 
                                       name="search" 
                                       class="form-control form-control-modern ps-5" 
                                       placeholder="Search customers by name, email, or phone..." 
                                       value="<%= search || '' %>">
                                <i class="fas fa-search position-absolute top-50 start-0 translate-middle-y ms-3 text-muted-modern"></i>
                            </div>
                            <button type="submit" class="btn btn-primary-modern">
                                <i class="fas fa-search me-2"></i>Search
                            </button>
                            <a href="/admin/users" class="btn btn-outline-modern">
                                <i class="fas fa-times me-2"></i>Clear
                            </a>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Customer Stats -->
            <div class="col-lg-4">
                <div class="stats-card-customers">
                    <div class="stats-icon-customers">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="stats-content-customers">
                        <div class="stats-number-customers"><%= data ? data.length : 0 %></div>
                        <div class="stats-label-customers">Total Customers</div>
                        <div class="stats-detail-customers">
                            <% if (data && data.length > 0) { %>
                                Active: <%= data.filter(u => !u.isBlocked).length %> | 
                                Blocked: <%= data.filter(u => u.isBlocked).length %>
                            <% } else { %>
                                No customers yet
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Customers Table -->
        <% if (data && data.length > 0) { %>
            <div class="table-modern">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Customer Details</th>
                            <th>Contact Information</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach((customer, index) => { %>
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="customer-avatar">
                                            <%= customer.name.charAt(0).toUpperCase() %>
                                        </div>
                                        <div class="customer-details">
                                            <div class="customer-name"><%= customer.name %></div>
                                            <div class="customer-id">ID: #<%= customer._id.toString().slice(-8).toUpperCase() %></div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="contact-info">
                                        <div class="customer-email">
                                            <i class="fas fa-envelope me-2"></i>
                                            <%= customer.email %>
                                        </div>
                                        <div class="customer-phone">
                                            <i class="fas fa-phone me-2"></i>
                                            <%= customer.phone || 'N/A' %>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="status-badge status-<%= customer.isBlocked ? 'blocked' : 'active' %>">
                                        <i class="fas fa-circle"></i>
                                        <%= customer.isBlocked ? 'Blocked' : 'Active' %>
                                    </span>
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <% if (!customer.isBlocked) { %>
                                            <button class="btn btn-sm btn-warning-modern"
                                                    onclick="toggleBlock('<%= customer._id %>', 'block')"
                                                    data-bs-toggle="tooltip" 
                                                    title="Block Customer">
                                                <i class="fas fa-lock me-1"></i>Block
                                            </button>
                                        <% } else { %>
                                            <button class="btn btn-sm btn-success-modern"
                                                    onclick="toggleBlock('<%= customer._id %>', 'unblock')"
                                                    data-bs-toggle="tooltip" 
                                                    title="Unblock Customer">
                                                <i class="fas fa-unlock me-1"></i>Unblock
                                            </button>
                                        <% } %>
                                        
                                        <button class="btn btn-sm btn-outline-modern"
                                                onclick="viewCustomerDetails('<%= customer._id %>')"
                                                data-bs-toggle="tooltip" 
                                                title="View Customer Details">
                                            <i class="fas fa-eye me-1"></i>View
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <% if (totalPages > 1) { %>
                <div class="d-flex justify-content-center mt-4">
                    <nav aria-label="Customers pagination">
                        <ul class="pagination pagination-modern">
                            <% if (currentPage > 1) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= currentPage - 1 %>&search=<%= search || '' %>">
                                        <i class="fas fa-chevron-left"></i>
                                    </a>
                                </li>
                            <% } %>

                            <% for (let i = 1; i <= totalPages; i++) { %>
                                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                    <a class="page-link" href="?page=<%= i %>&search=<%= search || '' %>">
                                        <%= i %>
                                    </a>
                                </li>
                            <% } %>

                            <% if (currentPage < totalPages) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= currentPage + 1 %>&search=<%= search || '' %>">
                                        <i class="fas fa-chevron-right"></i>
                                    </a>
                                </li>
                            <% } %>
                        </ul>
                    </nav>
                </div>
            <% } %>
        <% } else { %>
            <!-- Empty State -->
            <div class="card-modern text-center py-5 no-hover">
                <div class="card-body-modern">
                    <div class="empty-state">
                        <i class="fas fa-users text-muted-modern mb-3 empty-icon"></i>
                        <h5 class="text-muted-modern mb-2">No Customers Found</h5>
                        <p class="text-muted-modern mb-0">
                            <% if (search) { %>
                                No customers match your search criteria. Try adjusting your search terms.
                            <% } else { %>
                                No customers have registered yet.
                            <% } %>
                        </p>
                        <% if (search) { %>
                            <a href="/admin/users" class="btn btn-outline-modern mt-3">
                                <i class="fas fa-times me-2"></i>Clear Search
                            </a>
                        <% } %>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>

<!-- Customer Details Modal -->
<div class="modal fade" id="customerDetailsModal" tabindex="-1" aria-labelledby="customerDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content modal-modern">
            <div class="modal-header modal-header-modern">
                <h5 class="modal-title fw-semibold" id="customerDetailsModalLabel">
                    <i class="fas fa-user me-2"></i>Customer Details
                </h5>
                <button type="button" class="btn-close btn-close-modern" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body modal-body-modern">
                <div id="customerDetailsContent">
                    <!-- Customer details will be loaded here -->
                    <div class="text-center py-4">
                        <i class="fas fa-user-circle text-muted-modern mb-3" style="font-size: 4rem;"></i>
                        <h6 class="text-muted-modern">Customer details view can be implemented here</h6>
                        <p class="text-muted-modern mb-0">This modal can show detailed customer information, order history, etc.</p>
                    </div>
                </div>
            </div>
            <div class="modal-footer modal-footer-modern">
                <button type="button" class="btn btn-outline-modern" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Close
                </button>
            </div>
        </div>
    </div>
</div>

