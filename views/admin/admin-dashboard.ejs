<style>
    /* Dashboard Specific Monochrome Styles */
    .stats-card {
        background: var(--bg-primary);
        border: 1px solid var(--border-light);
        border-radius: var(--radius-xl);
        padding: 1.5rem;
        display: flex;
        align-items: center;
        gap: 1rem;
        transition: all var(--transition-normal);
        box-shadow: var(--shadow-sm);
    }

    .stats-card:hover {
        box-shadow: var(--shadow-md);
        transform: translateY(-2px);
    }

    .stats-icon {
        width: 60px;
        height: 60px;
        border-radius: var(--radius-lg);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: var(--text-light);
    }

    .stats-icon-primary {
        background: var(--bg-dark);
    }

    .stats-icon-success {
        background: var(--color-grey-700);
    }

    .stats-icon-warning {
        background: var(--color-grey-600);
    }

    .stats-icon-info {
        background: var(--color-grey-500);
    }

    .stats-content {
        flex: 1;
    }

    .stats-number {
        font-size: 1.75rem;
        font-weight: 700;
        color: var(--text-primary);
        line-height: 1.2;
        font-family: 'Courier New', monospace;
    }

    .stats-label {
        font-size: 0.875rem;
        color: var(--text-secondary);
        margin-bottom: 0.25rem;
    }

    .stats-change {
        font-size: 0.75rem;
        display: flex;
        align-items: center;
        gap: 0.25rem;
    }

    .stats-change-positive {
        color: var(--color-grey-700);
    }

    .stats-change-negative {
        color: var(--color-grey-500);
    }

    .chart-container {
        position: relative;
        height: 300px;
        width: 100%;
    }

    .order-status-list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .status-item {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .status-info {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .status-count {
        font-weight: 600;
        color: var(--text-primary);
        font-family: 'Courier New', monospace;
    }

    .status-progress {
        width: 100%;
    }

    .progress-modern {
        height: 6px;
        background-color: var(--bg-tertiary);
        border-radius: 3px;
        overflow: hidden;
    }

    .progress-bar-modern {
        background-color: var(--bg-dark);
        border-radius: 3px;
        transition: width 0.6s ease;
    }

    .user-avatar-sm {
        width: 24px;
        height: 24px;
        border-radius: 50%;
        background: var(--bg-dark);
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--text-light);
        font-weight: 600;
        font-size: 0.7rem;
    }

    .order-id-dashboard {
        color: var(--text-primary);
        font-family: 'Courier New', monospace;
    }

    .amount-dashboard {
        font-weight: 600;
        color: var(--text-primary);
        font-family: 'Courier New', monospace;
    }

    .table-header-modern {
        background: var(--bg-tertiary);
    }

    .table-dashboard th {
        background: var(--bg-tertiary);
        border: none;
        padding: 1rem 1.5rem;
        font-weight: 600;
        font-size: 0.875rem;
        color: var(--text-primary);
        border-bottom: 1px solid var(--border-light);
    }

    .table-dashboard td {
        padding: 1rem 1.5rem;
        border: none;
        border-bottom: 1px solid var(--border-light);
        font-size: 0.875rem;
        color: var(--text-primary);
    }

    .table-dashboard tbody tr:last-child td {
        border-bottom: none;
    }

    .table-dashboard tbody tr:hover {
        background: var(--bg-secondary);
    }

    .top-products-list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .product-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.75rem;
        background: var(--bg-tertiary);
        border-radius: var(--radius-lg);
        transition: all var(--transition-normal);
    }

    .product-item:hover {
        background: var(--bg-secondary);
        box-shadow: var(--shadow-sm);
    }

    .product-info {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        flex: 1;
    }

    .product-image {
        width: 40px;
        height: 40px;
        border-radius: var(--radius-md);
        background: var(--bg-dark);
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--text-light);
        font-size: 1rem;
    }

    .product-details {
        flex: 1;
    }

    .product-name {
        font-weight: 500;
        color: var(--text-primary);
        font-size: 0.875rem;
        line-height: 1.2;
    }

    .product-sales {
        font-size: 0.75rem;
        color: var(--text-muted);
    }

    .product-revenue {
        font-weight: 600;
        color: var(--text-primary);
        font-size: 0.875rem;
        font-family: 'Courier New', monospace;
    }

    .dropdown-menu-modern {
        background: var(--bg-primary);
        border: 1px solid var(--border-light);
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow-lg);
    }

    .dropdown-menu-modern .dropdown-item {
        color: var(--text-primary);
        padding: 0.5rem 1rem;
        transition: all var(--transition-normal);
    }

    .dropdown-menu-modern .dropdown-item:hover {
        background: var(--bg-tertiary);
        color: var(--text-primary);
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
        .stats-card {
            padding: 1rem;
        }

        .stats-icon {
            width: 50px;
            height: 50px;
            font-size: 1.25rem;
        }

        .stats-number {
            font-size: 1.5rem;
        }

        .chart-container {
            height: 250px;
        }
    }

    @media (max-width: 576px) {
        .stats-card {
            flex-direction: column;
            text-align: center;
            gap: 0.75rem;
        }

        .stats-content {
            text-align: center;
        }
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Sales Chart with monochrome theme
        const ctx = document.getElementById('salesChart');
        if (ctx) {
            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
                    datasets: [{
                        label: 'Sales',
                        data: [12000, 19000, 15000, 25000, 22000, 30000, 28000],
                        borderColor: '#171717',
                        backgroundColor: 'rgba(23, 23, 23, 0.1)',
                        borderWidth: 3,
                        fill: true,
                        tension: 0.4,
                        pointBackgroundColor: '#171717',
                        pointBorderColor: '#ffffff',
                        pointBorderWidth: 2,
                        pointRadius: 6,
                        pointHoverRadius: 8,
                        pointHoverBackgroundColor: '#171717',
                        pointHoverBorderColor: '#ffffff'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                color: '#e5e5e5'
                            },
                            ticks: {
                                color: '#525252',
                                callback: function(value) {
                                    return '₹' + (value / 1000) + 'k';
                                }
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            },
                            ticks: {
                                color: '#525252'
                            }
                        }
                    },
                    elements: {
                        point: {
                            hoverBackgroundColor: '#171717'
                        }
                    }
                }
            });
        }
    });
</script>

