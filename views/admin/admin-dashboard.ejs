<%- include('./partials/header', { pageTitle: 'Dashboard' }) %>

<%- include('./partials/sidebar', { page: 'dashboard' }) %>

<div class="main-content">
    <!-- Top Header -->
    <header class="top-header">
        <div class="header-content">
            <div class="header-left">
                <button class="sidebar-toggle" onclick="toggleSidebar()">
                    <i class="fas fa-bars"></i>
                </button>
                <div>
                    <h1 class="page-title">Dashboard</h1>
                    <div class="breadcrumbs">
                        <span>Overview</span>
                    </div>
                </div>
            </div>
            <div class="header-right">
                <div class="admin-profile">
                    <div class="admin-avatar">
                        A
                    </div>
                    <div class="admin-info">
                        <div class="admin-name">Admin</div>
                        <div class="admin-role">Administrator</div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Content Area -->
    <div class="content-area">
        <!-- Stats Cards -->
        <div class="row g-4 mb-4">
            <div class="col-xl-3 col-md-6">
                <div class="stats-card">
                    <div class="stats-icon stats-icon-primary">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="stats-content">
                        <div class="stats-number"><%= typeof totalUsers !== 'undefined' ? totalUsers : 0 %></div>
                        <div class="stats-label">Total Customers</div>
                        <div class="stats-change stats-change-positive">
                            <i class="fas fa-arrow-up"></i>
                            <span>+5.2% from last month</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6">
                <div class="stats-card">
                    <div class="stats-icon stats-icon-success">
                        <i class="fas fa-rupee-sign"></i>
                    </div>
                    <div class="stats-content">
                        <div class="stats-number">â‚¹<%= typeof totalRevenue !== 'undefined' ? totalRevenue.toLocaleString('en-IN', { maximumFractionDigits: 0 }) : 0 %></div>
                        <div class="stats-label">Total Revenue</div>
                        <div class="stats-change stats-change-positive">
                            <i class="fas fa-arrow-up"></i>
                            <span>+12.5% from last month</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6">
                <div class="stats-card">
                    <div class="stats-icon stats-icon-warning">
                        <i class="fas fa-shopping-cart"></i>
                    </div>
                    <div class="stats-content">
                        <div class="stats-number"><%= typeof totalOrders !== 'undefined' ? totalOrders : 0 %></div>
                        <div class="stats-label">Total Orders</div>
                        <div class="stats-change stats-change-positive">
                            <i class="fas fa-arrow-up"></i>
                            <span>+8.1% from last month</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6">
                <div class="stats-card">
                    <div class="stats-icon stats-icon-info">
                        <i class="fas fa-box"></i>
                    </div>
                    <div class="stats-content">
                        <div class="stats-number"><%= typeof totalProducts !== 'undefined' ? totalProducts : 0 %></div>
                        <div class="stats-label">Total Products</div>
                        <div class="stats-change stats-change-negative">
                            <i class="fas fa-arrow-down"></i>
                            <span>-2.3% from last month</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts and Tables Row -->
        <div class="row g-4 mb-4">
            <!-- Sales Chart -->
            <div class="col-xl-8">
                <div class="card-modern no-hover">
                    <div class="card-header-modern">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0">Sales Overview</h5>
                            <div class="dropdown">
                                <button class="btn btn-ghost-modern btn-sm dropdown-toggle" id="chartFilterBtn" type="button" data-bs-toggle="dropdown">
                                    Last 7 days
                                </button>
                                <ul class="dropdown-menu dropdown-menu-modern">
                                    <li><a class="dropdown-item chart-filter" data-period="daily" href="#">Last 7 days</a></li>
                                    <li><a class="dropdown-item chart-filter" data-period="monthly" href="#">Monthly (12 months)</a></li>
                                    <li><a class="dropdown-item chart-filter" data-period="yearly" href="#">Yearly (5 years)</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="card-body-modern">
                        <div class="chart-container">
                            <canvas id="salesChart" height="300"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Order Status Distribution -->
            <div class="col-xl-4">
                <div class="card-modern no-hover">
                    <div class="card-header-modern">
                        <h5 class="card-title mb-0">Order Status</h5>
                    </div>
                    <div class="card-body-modern">
                        <div class="order-status-list">
                            <div class="status-item">
                                <div class="status-info">
                                    <span class="status-badge status-pending">
                                        <i class="fas fa-circle"></i>
                                        Pending
                                    </span>
                                    <span class="status-count"><%= statusCounts && statusCounts.pending || 0 %></span>
                                </div>
                                <div class="status-progress">
                                    <div class="progress progress-modern">
                                        <div class="progress-bar progress-bar-modern" style="width: <%= statusPercents && statusPercents.pending || 0 %>%"></div>
                                    </div>
                                </div>
                            </div>

                            <div class="status-item">
                                <div class="status-info">
                                    <span class="status-badge status-processing">
                                        <i class="fas fa-circle"></i>
                                        Processing
                                    </span>
                                    <span class="status-count"><%= statusCounts && statusCounts.processing || 0 %></span>
                                </div>
                                <div class="status-progress">
                                    <div class="progress progress-modern">
                                        <div class="progress-bar progress-bar-modern" style="width: <%= statusPercents && statusPercents.processing || 0 %>%"></div>
                                    </div>
                                </div>
                            </div>

                            <div class="status-item">
                                <div class="status-info">
                                    <span class="status-badge status-shipped">
                                        <i class="fas fa-circle"></i>
                                        Shipped
                                    </span>
                                    <span class="status-count"><%= statusCounts && statusCounts.shipped || 0 %></span>
                                </div>
                                <div class="status-progress">
                                    <div class="progress progress-modern">
                                        <div class="progress-bar progress-bar-modern" style="width: <%= statusPercents && statusPercents.shipped || 0 %>%"></div>
                                    </div>
                                </div>
                            </div>

                            <div class="status-item">
                                <div class="status-info">
                                    <span class="status-badge status-delivered">
                                        <i class="fas fa-circle"></i>
                                        Delivered
                                    </span>
                                    <span class="status-count"><%= statusCounts && statusCounts.delivered || 0 %></span>
                                </div>
                                <div class="status-progress">
                                    <div class="progress progress-modern">
                                        <div class="progress-bar progress-bar-modern" style="width: <%= statusPercents && statusPercents.delivered || 0 %>%"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activity and Top Products -->
        <div class="row g-4 mb-4">
            <!-- Recent Orders -->
            <div class="col-xl-8">
                <div class="card-modern no-hover">
                    <div class="card-header-modern">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0">Recent Orders</h5>
                            <a href="/admin/orders" class="btn btn-outline-modern btn-sm">
                                View All
                                <i class="fas fa-arrow-right ms-2"></i>
                            </a>
                        </div>
                    </div>
                    <div class="card-body-modern p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0 table-dashboard">
                                <thead class="table-header-modern">
                                    <tr>
                                        <th>Order ID</th>
                                        <th>Customer</th>
                                        <th>Status</th>
                                        <th>Amount</th>
                                        <th>Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (recentOrders && recentOrders.length) { %>
                                        <% recentOrders.forEach(function(o){ %>
                                            <tr>
                                                <td>
                                                    <span class="fw-medium order-id-dashboard">#<%= o.orderID %></span>
                                                </td>
                                                <td>
                                                    <div class="d-flex align-items-center gap-2">
                                                        <div class="user-avatar-sm"><%= (o.user && o.user.name ? o.user.name.charAt(0).toUpperCase() : 'U') %></div>
                                                        <span><%= o.user && o.user.name ? o.user.name : 'Unknown' %></span>
                                                    </div>
                                                </td>
                                                <td>
                                                    <span class="status-badge status-<%= (o.orderStatus || '').replace(/\s+/g, '-') %>">
                                                        <i class="fas fa-circle"></i>
                                                        <%= o.orderStatus %>
                                                    </span>
                                                </td>
                                                <td class="amount-dashboard">â‚¹<%= (o.finalAmount || 0).toLocaleString('en-IN', { maximumFractionDigits: 0 }) %></td>
                                                <td class="text-muted-modern"><%= new Date(o.createdAt).toLocaleString('en-IN', { hour: '2-digit', minute: '2-digit', day: '2-digit', month: 'short' }) %></td>
                                            </tr>
                                        <% }) %>
                                    <% } else { %>
                                        <tr><td colspan="5" class="text-center text-muted-modern py-3">No recent orders</td></tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column for Top Products and Categories -->
            <div class="col-xl-4">
                <div class="d-flex flex-column gap-4">
                    <!-- Top Products -->
                    <div class="card-modern no-hover">
                        <div class="card-header-modern">
                            <h5 class="card-title mb-0">Top Products</h5>
                        </div>
                        <div class="card-body-modern">
                            <div class="top-products-list">
                                <% if (topProducts && topProducts.length) { %>
                                    <% topProducts.forEach(function(p){ %>
                                        <div class="product-item">
                                            <div class="product-info">
                                                <div class="product-image">
                                                    <i class="fas fa-box"></i>
                                                </div>
                                                <div class="product-details">
                                                    <div class="product-name"><%= p.name %></div>
                                                    <div class="product-sales"><%= p.quantity %> sold</div>
                                                </div>
                                            </div>
                                            <div class="product-revenue">â‚¹<%= (p.revenue || 0).toLocaleString('en-IN', { maximumFractionDigits: 0 }) %></div>
                                        </div>
                                    <% }) %>
                                <% } else { %>
                                    <div class="text-center text-muted-modern py-3">No product sales data</div>
                                <% } %>
                            </div>
                        </div>
                    </div>

                    <!-- Top Categories -->
                    <div class="card-modern no-hover">
                        <div class="card-header-modern">
                            <h5 class="card-title mb-0">Top Selling Categories</h5>
                        </div>
                        <div class="card-body-modern">
                            <div class="top-products-list">
                                <% if (topCategories && topCategories.length) { %>
                                    <% topCategories.forEach(function(cat){ %>
                                        <div class="product-item">
                                            <div class="product-info">
                                                <div class="product-image" style="background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);">
                                                    <i class="fas fa-tags"></i>
                                                </div>
                                                <div class="product-details">
                                                    <div class="product-name"><%= cat.name %></div>
                                                    <div class="product-sales"><%= cat.totalSold %> sold</div>
                                                </div>
                                            </div>
                                            <div class="product-revenue">â‚¹<%= (cat.totalRevenue || 0).toLocaleString('en-IN', { maximumFractionDigits: 0 }) %></div>
                                        </div>
                                    <% }) %>
                                <% } else { %>
                                    <div class="text-center text-muted-modern py-3">No category sales data</div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

