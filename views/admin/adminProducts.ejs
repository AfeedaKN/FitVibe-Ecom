<%- include('./partials/header', { pageTitle: 'Product Management' }) %>

<%- include('./partials/sidebar', { page: 'products' }) %>

<div class="main-content">
    <!-- Top Header -->
    <header class="top-header">
        <div class="header-content">
            <div class="header-left">
                <button class="sidebar-toggle" onclick="toggleSidebar()">
                    <i class="fas fa-bars"></i>
                </button>
                <div>
                    <h1 class="page-title">Product Management</h1>
                    <div class="breadcrumbs">
                        <a href="/admin/dashboard">Dashboard</a>
                        <span class="breadcrumb-separator">/</span>
                        <span>Products</span>
                    </div>
                </div>
            </div>
            <div class="header-right">
                <a href="/admin/addproducts" class="btn btn-primary-modern">
                    <i class="fas fa-plus me-2"></i>Add Product
                </a>
                <div class="admin-profile">
                    <div class="admin-avatar">
                        A
                    </div>
                    <div class="admin-info">
                        <div class="admin-name">Admin</div>
                        <div class="admin-role">Administrator</div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Content Area -->
    <div class="content-area">
        <!-- Filters and Search -->
        <div class="card-modern mb-4 no-hover">
            <div class="card-body-modern">
                <form method="GET" action="/admin/products" class="row g-3">
                    <div class="col-md-3">
                        <div class="position-relative">
                            <input type="text" 
                                   name="search" 
                                   class="form-control form-control-modern ps-5" 
                                   placeholder="Search products..." 
                                   value="<%= searchQuery || '' %>">
                            <i class="fas fa-search position-absolute top-50 start-0 translate-middle-y ms-3 text-muted-modern"></i>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <select name="category" class="form-select form-select-modern">
                            <option value="">All Categories</option>
                            <% if (typeof categories !== 'undefined' && categories) { %>
                                <% categories.forEach(cat => { %>
                                    <option value="<%= cat._id %>" <%= (typeof category !== 'undefined' && category === cat._id.toString()) ? 'selected' : '' %>>
                                        <%= cat.name %>
                                    </option>
                                <% }) %>
                            <% } %>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <select name="isActive" class="form-select form-select-modern">
                            <option value="">All Status</option>
                            <option value="true" <%= (typeof isActiveFilter !== 'undefined' && isActiveFilter === 'true') ? 'selected' : '' %>>Active</option>
                            <option value="false" <%= (typeof isActiveFilter !== 'undefined' && isActiveFilter === 'false') ? 'selected' : '' %>>Inactive</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <select name="sortBy" class="form-select form-select-modern">
                            <option value="createdAt" <%= (typeof sortBy !== 'undefined' && sortBy === 'createdAt') ? 'selected' : '' %>>Date Created</option>
                            <option value="name" <%= (typeof sortBy !== 'undefined' && sortBy === 'name') ? 'selected' : '' %>>Name</option>
                            <option value="price" <%= (typeof sortBy !== 'undefined' && sortBy === 'price') ? 'selected' : '' %>>Price</option>
                        </select>
                    </div>
                    <div class="col-md-1">
                        <select name="sortOrder" class="form-select form-select-modern">
                            <option value="desc" <%= (typeof sortOrder !== 'undefined' && sortOrder === 'desc') ? 'selected' : '' %>>Desc</option>
                            <option value="asc" <%= (typeof sortOrder !== 'undefined' && sortOrder === 'asc') ? 'selected' : '' %>>Asc</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary-modern flex-fill">
                                <i class="fas fa-filter me-2"></i>Filter
                            </button>
                            <a href="/admin/products" class="btn btn-outline-modern">
                                <i class="fas fa-times"></i>
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Products Stats -->
        <div class="row g-3 mb-4">
            <div class="col-md-3">
                <div class="stats-card-sm">
                    <div class="stats-icon-sm stats-icon-primary">
                        <i class="fas fa-box"></i>
                    </div>
                    <div class="stats-content-sm">
                        <div class="stats-number-sm"><%= typeof totalProducts !== 'undefined' ? totalProducts : 0 %></div>
                        <div class="stats-label-sm">Total Products</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stats-card-sm">
                    <div class="stats-icon-sm stats-icon-success">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div class="stats-content-sm">
                        <div class="stats-number-sm">
                            <%= typeof products !== 'undefined' && products ? products.filter(p => p.isListed).length : 0 %>
                        </div>
                        <div class="stats-label-sm">Active Products</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stats-card-sm">
                    <div class="stats-icon-sm stats-icon-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <div class="stats-content-sm">
                        <div class="stats-number-sm">
                            <%= typeof products !== 'undefined' && products ? products.filter(p => {
                                if (!p.variants || !p.variants.length) return false;
                                const totalStock = p.variants.reduce((sum, v) => sum + (v.varientquatity || 0), 0);
                                return totalStock <= 10 && totalStock > 0;
                            }).length : 0 %>
                        </div>
                        <div class="stats-label-sm">Low Stock</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stats-card-sm">
                    <div class="stats-icon-sm stats-icon-danger">
                        <i class="fas fa-times-circle"></i>
                    </div>
                    <div class="stats-content-sm">
                        <div class="stats-number-sm">
                            <%= typeof products !== 'undefined' && products ? products.filter(p => {
                                if (!p.variants || !p.variants.length) return true;
                                const totalStock = p.variants.reduce((sum, v) => sum + (v.varientquatity || 0), 0);
                                return totalStock === 0;
                            }).length : 0 %>
                        </div>
                        <div class="stats-label-sm">Out of Stock</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Products Table -->
        <% if (typeof products !== 'undefined' && products && products.length > 0) { %>
            <div class="table-modern">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Category</th>
                            <th>Price Range</th>
                            <th>Stock</th>
                            <th>Offer</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% products.forEach(product => { %>
                            <tr class="table-row-clickable" data-href="/admin/product/<%= product._id %>">
                                <td>
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="product-image-container">
                                            <% if (product.images && product.images.length > 0) { %>
                                                <img src="<%= product.images[0].thumbnail || product.images[0].url %>" 
                                                     alt="<%= product.name %>" 
                                                     class="product-thumbnail">
                                            <% } else { %>
                                                <div class="product-placeholder">
                                                    <i class="fas fa-image"></i>
                                                </div>
                                            <% } %>
                                        </div>
                                        <div class="product-details">
                                            <div class="product-name"><%= product.name %></div>
                                            <div class="product-sku">SKU: <%= product.sku || 'N/A' %></div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="category-badge">
                                        <%= product.categoryId ? product.categoryId.name : 'N/A' %>
                                    </span>
                                </td>
                                <td>
                                    <% if (product.variants && product.variants.length > 0) { %>
                                        <% const prices = product.variants.map(v => v.varientPrice).filter(p => p > 0) %>
                                        <% if (prices.length > 0) { %>
                                            <div class="price-range">
                                                ₹<%= Math.min(...prices).toLocaleString() %> - ₹<%= Math.max(...prices).toLocaleString() %>
                                            </div>
                                        <% } else { %>
                                            <span class="text-muted-modern">N/A</span>
                                        <% } %>
                                    <% } else { %>
                                        <span class="text-muted-modern">N/A</span>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (product.variants && product.variants.length > 0) { %>
                                        <% const totalStock = product.variants.reduce((sum, v) => sum + (v.varientquatity || 0), 0) %>
                                        <span class="stock-badge stock-<%= totalStock > 10 ? 'high' : totalStock > 0 ? 'low' : 'out' %>">
                                            <%= totalStock %>
                                        </span>
                                    <% } else { %>
                                        <span class="stock-badge stock-out">0</span>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (product.displayOffer && product.displayOffer > 0) { %>
                                        <div class="offer-info">
                                            <span class="offer-badge">
                                                <%= product.displayOffer %>% OFF
                                            </span>
                                            <div class="offer-source"><%= product.offerSource || 'Product' %></div>
                                        </div>
                                    <% } else { %>
                                        <span class="text-muted-modern">No Offer</span>
                                    <% } %>
                                </td>
                                <td>
                                    <span class="status-badge status-<%= product.isListed ? 'active' : 'inactive' %>">
                                        <i class="fas fa-circle"></i>
                                        <%= product.isListed ? 'Active' : 'Inactive' %>
                                    </span>
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <a href="/admin/editproducts?id=<%= product._id %>" 
                                           class="btn btn-sm btn-outline-modern"
                                           data-bs-toggle="tooltip" 
                                           title="Edit Product">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" 
                                                class="btn btn-sm <%= product.isListed ? 'btn-warning-modern' : 'btn-success-modern' %>"
                                                onclick="toggleProductStatus('<%= product._id %>', '<%= product.isListed %>')"
                                                data-bs-toggle="tooltip" 
                                                title="<%= product.isListed ? 'Deactivate' : 'Activate' %>">
                                            <i class="fas <%= product.isListed ? 'fa-eye-slash' : 'fa-eye' %>"></i>
                                        </button>
                                        <button type="button" 
                                                class="btn btn-sm btn-danger-modern"
                                                onclick="confirmDeleteProduct('<%= product._id %>')"
                                                data-bs-toggle="tooltip" 
                                                title="Delete Product">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
                <div class="d-flex justify-content-center mt-4">
                    <nav aria-label="Products pagination">
                        <ul class="pagination pagination-modern">
                            <% if (typeof currentPage !== 'undefined' && currentPage > 1) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= currentPage - 1 %>&<%= typeof query !== 'undefined' ? new URLSearchParams(query).toString() : '' %>">
                                        <i class="fas fa-chevron-left"></i>
                                    </a>
                                </li>
                            <% } %>

                            <% if (typeof currentPage !== 'undefined' && typeof totalPages !== 'undefined') { %>
                                <% for (let i = Math.max(1, currentPage - 2); i <= Math.min(totalPages, currentPage + 2); i++) { %>
                                    <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                        <a class="page-link" href="?page=<%= i %>&<%= typeof query !== 'undefined' ? new URLSearchParams(query).toString() : '' %>">
                                            <%= i %>
                                        </a>
                                    </li>
                                <% } %>
                            <% } %>

                            <% if (typeof currentPage !== 'undefined' && typeof totalPages !== 'undefined' && currentPage < totalPages) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= currentPage + 1 %>&<%= typeof query !== 'undefined' ? new URLSearchParams(query).toString() : '' %>">
                                        <i class="fas fa-chevron-right"></i>
                                    </a>
                                </li>
                            <% } %>
                        </ul>
                    </nav>
                </div>
            <% } %>
        <% } else { %>
            <!-- Empty State -->
            <div class="card-modern text-center py-5 no-hover">
                <div class="card-body-modern">
                    <div class="empty-state">
                        <i class="fas fa-box-open text-muted-modern mb-3 empty-icon"></i>
                        <h5 class="text-muted-modern mb-2">No Products Found</h5>
                        <p class="text-muted-modern mb-4">
                            <% if (typeof searchQuery !== 'undefined' && searchQuery) { %>
                                No products match your search criteria. Try adjusting your filters.
                            <% } else { %>
                                Start building your catalog by adding your first product.
                            <% } %>
                        </p>
                        <div class="d-flex gap-2 justify-content-center">
                            <a href="/admin/addproducts" class="btn btn-primary-modern">
                                <i class="fas fa-plus me-2"></i>Add Product
                            </a>
                            <% if (typeof searchQuery !== 'undefined' && searchQuery) { %>
                                <a href="/admin/products" class="btn btn-outline-modern">
                                    <i class="fas fa-times me-2"></i>Clear Filters
                                </a>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>

<style>
