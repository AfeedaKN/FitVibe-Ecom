<%- include('./partials/header', { pageTitle: 'Product Management' }) %>

<%- include('./partials/sidebar', { page: 'products' }) %>

<div class="main-content">
    <!-- Top Header -->
    <header class="top-header">
        <div class="header-content">
            <div class="header-left">
                <button class="sidebar-toggle" onclick="toggleSidebar()">
                    <i class="fas fa-bars"></i>
                </button>
                <div>
                    <h1 class="page-title">Product Management</h1>
                    <div class="breadcrumbs">
                        <a href="/admin/dashboard">Dashboard</a>
                        <span class="breadcrumb-separator">/</span>
                        <span>Products</span>
                    </div>
                </div>
            </div>
            <div class="header-right">
                <a href="/admin/addproducts" class="btn btn-primary-modern">
                    <i class="fas fa-plus me-2"></i>Add Product
                </a>
                <div class="admin-profile">
                    <div class="admin-avatar">
                        A
                    </div>
                    <div class="admin-info">
                        <div class="admin-name">Admin</div>
                        <div class="admin-role">Administrator</div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Content Area -->
    <div class="content-area">
        <!-- Stats Overview -->
        <div class="stats-overview">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-box"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-number"><%= typeof totalAllProducts !== 'undefined' ? totalAllProducts : 0 %></div>
                    <div class="stat-label">Total Products</div>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-number">
                        <%= typeof allProducts !== 'undefined' && allProducts ? allProducts.filter(p => p.isListed).length : 0 %>
                    </div>
                    <div class="stat-label">Active Products</div>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-number">
                        <%= typeof allProducts !== 'undefined' && allProducts ? allProducts.filter(p => {
                            if (!p.variants || !p.variants.length) return false;
                            const totalStock = p.variants.reduce((sum, v) => sum + (v.varientquatity || 0), 0);
                            return totalStock <= 10 && totalStock > 0;
                        }).length : 0 %>
                    </div>
                    <div class="stat-label">Low Stock</div>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-times-circle"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-number">
                        <%= typeof allProducts !== 'undefined' && allProducts ? allProducts.filter(p => {
                            if (!p.variants || !p.variants.length) return true;
                            const totalStock = p.variants.reduce((sum, v) => sum + (v.varientquatity || 0), 0);
                            return totalStock === 0;
                        }).length : 0 %>
                    </div>
                    <div class="stat-label">Out of Stock</div>
                </div>
            </div>
        </div>

        <!-- Filters and Search -->
        <div class="filter-card">
            <div class="filter-header">
                <h3 class="filter-title">
                    <i class="fas fa-filter"></i>
                    Search & Filter Products
                </h3>
            </div>
            <div class="filter-body">
                <form method="GET" action="/admin/products" class="filter-form">
                    <div class="filter-row">
                        <div class="filter-group">
                            <label class="filter-label">Search Products</label>
                            <div class="search-input-wrapper">
                                <input type="text" 
                                       name="search" 
                                       class="search-input" 
                                       placeholder="Search by product name, SKU, or description..." 
                                       value="<%= searchQuery || '' %>">
                                <i class="fas fa-search search-icon"></i>
                            </div>
                        </div>
                        <div class="filter-group">
                            <label class="filter-label">Category</label>
                            <select name="category" class="filter-select">
                                <option value="">All Categories</option>
                                <% if (typeof categories !== 'undefined' && categories) { %>
                                    <% categories.forEach(cat => { %>
                                        <option value="<%= cat._id %>" <%= (typeof category !== 'undefined' && category === cat._id.toString()) ? 'selected' : '' %>>
                                            <%= cat.name %>
                                        </option>
                                    <% }) %>
                                <% } %>
                            </select>
                        </div>
                        <div class="filter-group">
                            <label class="filter-label">Status</label>
                            <select name="isActive" class="filter-select">
                                <option value="">All Status</option>
                                <option value="true" <%= (typeof isActiveFilter !== 'undefined' && isActiveFilter === 'true') ? 'selected' : '' %>>Active</option>
                                <option value="false" <%= (typeof isActiveFilter !== 'undefined' && isActiveFilter === 'false') ? 'selected' : '' %>>Inactive</option>
                            </select>
                        </div>
                    </div>
                    
                    <div class="filter-actions">
                        <button type="submit" class="btn-primary">
                            <i class="fas fa-search"></i>
                            Apply Filters
                        </button>
                        <a href="/admin/products" class="btn-secondary">
                            <i class="fas fa-times"></i>
                            Clear All
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <!-- Products Table -->
        <% if (typeof products !== 'undefined' && products && products.length > 0) { %>
            <div class="products-table-card">
                <div class="table-header">
                    <h3 class="table-title">
                        <i class="fas fa-box"></i>
                        Products List
                    </h3>
                </div>
                <div class="table-container">
                    <table class="products-table">
                        <thead>
                            <tr>
                                <th>
                                    <div class="th-content">
                                        <span>Product Details</span>
                                        <i class="fas fa-sort"></i>
                                    </div>
                                </th>
                                <th>Category</th>
                                <th>Price Range</th>
                                <th>Stock</th>
                                <th>Offer</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% products.forEach(product => { %>
                                <tr class="product-row">
                                    <td>
                                        <div class="product-info">
                                            <div class="product-image-container">
                                                <% if (product.images && product.images.length > 0) { %>
                                                    <img src="<%= product.images[0].thumbnail || product.images[0].url %>" 
                                                         alt="<%= product.name %>" 
                                                         class="product-thumbnail">
                                                <% } else { %>
                                                    <div class="product-placeholder">
                                                        <i class="fas fa-image"></i>
                                                    </div>
                                                <% } %>
                                            </div>
                                            <div class="product-details">
                                                <div class="product-name"><%= product.name %></div>
                                                <div class="product-sku">SKU: <%= product.sku || 'N/A' %></div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="category-badge">
                                            <%= product.categoryId ? product.categoryId.name : 'N/A' %>
                                        </span>
                                    </td>
                                    <td>
                                        <% if (product.variants && product.variants.length > 0) { %>
                                            <% const prices = product.variants.map(v => v.varientPrice).filter(p => p > 0) %>
                                            <% if (prices.length > 0) { %>
                                                <div class="price-range">
                                                    ₹<%= Math.min(...prices).toLocaleString() %> - ₹<%= Math.max(...prices).toLocaleString() %>
                                                </div>
                                            <% } else { %>
                                                <span class="text-muted">N/A</span>
                                            <% } %>
                                        <% } else { %>
                                            <span class="text-muted">N/A</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (product.variants && product.variants.length > 0) { %>
                                            <% const totalStock = product.variants.reduce((sum, v) => sum + (v.varientquatity || 0), 0) %>
                                            <span class="stock-badge stock-<%= totalStock > 10 ? 'high' : totalStock > 0 ? 'low' : 'out' %>">
                                                <%= totalStock %>
                                            </span>
                                        <% } else { %>
                                            <span class="stock-badge stock-out">0</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (product.displayOffer && product.displayOffer > 0) { %>
                                            <div class="offer-info">
                                                <span class="offer-badge">
                                                    <%= product.displayOffer %>% OFF
                                                </span>
                                                <div class="offer-source"><%= product.offerSource || 'Product' %></div>
                                            </div>
                                        <% } else { %>
                                            <span class="text-muted">No Offer</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <span class="status-badge status-<%= product.isListed ? 'active' : 'inactive' %>">
                                            <i class="fas fa-circle"></i>
                                            <%= product.isListed ? 'Active' : 'Inactive' %>
                                        </span>
                                    </td>
                                    <td>
                                        <div class="action-buttons">
                                            <a href="/admin/product/<%= product._id %>" 
                                               class="action-btn view-btn"
                                               title="View Product Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="/admin/editproducts?id=<%= product._id %>" 
                                               class="action-btn edit-btn"
                                               title="Edit Product">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button" 
                                                    class="action-btn <%= product.isListed ? 'deactivate-btn' : 'activate-btn' %>"
                                                    onclick="toggleProductStatus('<%= product._id %>', '<%= product.isListed %>')"
                                                    title="<%= product.isListed ? 'Deactivate' : 'Activate' %>">
                                                <i class="fas <%= product.isListed ? 'fa-eye-slash' : 'fa-eye' %>"></i>
                                            </button>
                                            <button type="button" 
                                                    class="action-btn delete-btn"
                                                    onclick="confirmDeleteProduct('<%= product._id %>')"
                                                    title="Delete Product">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Pagination -->
            <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
                <div class="pagination-container">
                    <nav class="pagination-nav">
                        <ul class="pagination">
                            <% if (typeof currentPage !== 'undefined' && typeof totalPages !== 'undefined') { %>
                                <% for (let i = Math.max(1, currentPage - 2); i <= Math.min(totalPages, currentPage + 2); i++) { %>
                                    <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                        <a class="page-link" href="?page=<%= i %>&<%= typeof query !== 'undefined' ? new URLSearchParams(query).toString() : '' %>">
                                            <%= i %>
                                        </a>
                                    </li>
                                <% } %>
                            <% } %>
                        </ul>
                    </nav>
                </div>
            <% } %>
        <% } else { %>
            <!-- Empty State -->
            <div class="empty-state-card">
                <div class="empty-state-content">
                    <div class="empty-state-icon">
                        <i class="fas fa-box-open"></i>
                    </div>
                    <h3 class="empty-state-title">No Products Found</h3>
                    <p class="empty-state-text">
                        <% if (typeof searchQuery !== 'undefined' && searchQuery) { %>
                            No products match your current search criteria. Try adjusting your filters.
                        <% } else { %>
                            Start building your catalog by adding your first product.
                        <% } %>
                    </p>
                    <div class="empty-state-actions">
                        <a href="/admin/addproducts" class="btn-primary">
                            <i class="fas fa-plus"></i>
                            Add Product
                        </a>
                        <% if (typeof searchQuery !== 'undefined' && searchQuery) { %>
                            <a href="/admin/products" class="btn-secondary">
                                <i class="fas fa-times"></i>
                                Clear Filters
                            </a>
                        <% } %>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>

