        background: var(--bg-primary);
        border: 1px solid var(--border-light);
        border-radius: var(--radius-lg);
        padding: 1rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        transition: all var(--transition-normal);
        box-shadow: var(--shadow-sm);
    }

    .stats-card-sm:hover {
        box-shadow: var(--shadow-md);
        transform: translateY(-1px);
    }

    .stats-icon-sm {
        width: 40px;
        height: 40px;
        border-radius: var(--radius-md);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1rem;
        color: var(--text-light);
    }

    .stats-icon-primary {
        background: var(--bg-dark);
    }

    .stats-icon-success {
        background: var(--color-grey-700);
    }

    .stats-icon-warning {
        background: var(--color-grey-600);
    }

    .stats-icon-danger {
        background: var(--color-grey-500);
    }

    .stats-content-sm {
        flex: 1;
    }

    .stats-number-sm {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--text-primary);
        line-height: 1.2;
        font-family: 'Courier New', monospace;
    }

    .stats-label-sm {
        font-size: 0.75rem;
        color: var(--text-secondary);
    }

    .product-image-container {
        width: 50px;
        height: 50px;
        border-radius: var(--radius-md);
        overflow: hidden;
        background: var(--bg-tertiary);
        border: 1px solid var(--border-light);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .product-thumbnail {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .product-placeholder {
        color: var(--text-muted);
        font-size: 1.25rem;
    }

    .product-details {
        flex: 1;
    }

    .product-name {
        font-weight: 500;
        color: var(--text-primary);
        font-size: 0.875rem;
        line-height: 1.3;
        margin-bottom: 0.125rem;
    }

    .product-sku {
        font-size: 0.75rem;
        color: var(--text-muted);
        font-family: 'Courier New', monospace;
    }

    .category-badge {
        background: var(--bg-tertiary);
        color: var(--text-secondary);
        padding: 0.25rem 0.75rem;
        border-radius: var(--radius-lg);
        font-size: 0.75rem;
        font-weight: 500;
        border: 1px solid var(--border-light);
    }

    .price-range {
        font-weight: 500;
        color: var(--text-primary);
        font-size: 0.875rem;
        font-family: 'Courier New', monospace;
    }

    .stock-badge {
        padding: 0.25rem 0.5rem;
        border-radius: var(--radius-md);
        font-size: 0.75rem;
        font-weight: 600;
        min-width: 40px;
        text-align: center;
        display: inline-block;
        font-family: 'Courier New', monospace;
    }

    .stock-high {
        background: var(--color-grey-800);
        color: var(--text-light);
    }

    .stock-low {
        background: var(--color-grey-600);
        color: var(--text-light);
    }

    .stock-out {
        background: var(--color-grey-400);
        color: var(--text-light);
    }

    .offer-info {
        display: flex;
        flex-direction: column;
        gap: 0.125rem;
    }

    .offer-badge {
        background: var(--bg-dark);
        color: var(--text-light);
        padding: 0.25rem 0.5rem;
        border-radius: var(--radius-md);
        font-size: 0.7rem;
        font-weight: 600;
        display: inline-block;
        width: fit-content;
    }

    .offer-source {
        font-size: 0.65rem;
        color: var(--text-muted);
    }

    .action-buttons {
        display: flex;
        gap: 0.375rem;
    }

    .action-buttons .btn {
        padding: 0.375rem 0.5rem;
        border-radius: var(--radius-md);
        transition: all var(--transition-normal);
    }

    .action-buttons .btn:hover {
        transform: translateY(-1px);
        box-shadow: var(--shadow-sm);
    }

    .btn-warning-modern {
        background: var(--color-grey-600);
        color: var(--text-light);
        border: 1px solid var(--color-grey-600);
    }

    .btn-warning-modern:hover {
        background: var(--color-grey-700);
        border-color: var(--color-grey-700);
        color: var(--text-light);
    }

    .empty-state {
        padding: 3rem 1rem;
    }

    .empty-icon {
        font-size: 4rem;
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
        .stats-card-sm {
            padding: 0.75rem;
        }

        .stats-icon-sm {
            width: 35px;
            height: 35px;
            font-size: 0.875rem;
        }

        .stats-number-sm {
            font-size: 1.125rem;
        }

        .product-image-container {
            width: 40px;
            height: 40px;
        }

        .product-name {
            font-size: 0.8rem;
        }

        .action-buttons {
            flex-direction: column;
            gap: 0.25rem;
        }

        .action-buttons .btn {
            padding: 0.25rem 0.375rem;
            font-size: 0.75rem;
        }
    }

    @media (max-width: 576px) {
        .table-modern {
            font-size: 0.8rem;
        }

        .stats-card-sm {
            flex-direction: column;
            text-align: center;
            gap: 0.5rem;
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    });

    function toggleProductStatus(productId, currentStatus) {
        const isListed = currentStatus === 'true';
        const action = isListed ? 'deactivate' : 'activate';
        const actionText = isListed ? 'deactivated' : 'activated';
        
        confirmAction(
            `Are you sure you want to ${action} this product?`,
            async () => {
                try {
                    const response = await fetch(`/admin/products/${productId}/toggle-status`, {
                        method: 'PATCH',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    });
                    
                    if (response.ok) {
                        showToast(`Product ${actionText} successfully`, 'success');
                        setTimeout(() => window.location.reload(), 1000);
                    } else {
                        showToast('Failed to update product status', 'error');
                    }
                } catch (error) {
                    showToast('Error updating product status', 'error');
                }
            },
            {
                title: `${action.charAt(0).toUpperCase() + action.slice(1)} Product`,
                confirmText: `Yes, ${action}`,
                type: isListed ? 'warning' : 'success'
            }
        );
    }

    function confirmDeleteProduct(productId) {
        confirmAction(
            'This action cannot be undone. The product will be permanently deleted.',
            async () => {
                try {
                    const response = await fetch(`/admin/deleteproduct/${productId}`, {
                        method: 'DELETE'
                    });
                    
                    if (response.ok) {
                        showToast('Product deleted successfully', 'success');
                        setTimeout(() => window.location.reload(), 1000);
                    } else {
                        showToast('Failed to delete product', 'error');
                    }
                } catch (error) {
                    showToast('Error deleting product', 'error');
                }
            },
            {
                title: 'Delete Product',
                confirmText: 'Yes, Delete',
                type: 'danger'
            }
        );
    }
</script>

<%- include('./partials/footer') %>